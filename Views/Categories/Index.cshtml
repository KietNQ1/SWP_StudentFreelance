@model IEnumerable<StudentFreelance.Models.Category>
@using Microsoft.AspNetCore.Mvc.Rendering
<link rel="stylesheet" href="~/css/category/index.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Danh mục dự án";
    ViewData["HeaderIcon"] = "list-ul";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách danh mục dự án</h5>
        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
        {
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo mới</a>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Loại</th>
                        <th>Mô tả</th>
                        <th>Danh mục cha</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.IsActive ? "" : "text-muted")">
                            <td>@(char.ToUpper(item.CategoryName[0]) + item.CategoryName.Substring(1).ToLower())</td>
                            <td>@(char.ToUpper(item.CategoryType[0]) + item.CategoryType.Substring(1).ToLower())</td>
                            <td>@item.Description</td>
                            <td>@(item.ParentCategory?.CategoryName ?? "-")</td>
                            <td>
                                <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                    @(item.IsActive ? "Đang hiển thị" : "Đã ẩn")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @if (item.IsActive)
                                        {
                                            <a asp-action="Hide" asp-route-id="@item.CategoryID" class="btn btn-sm btn-danger">
                                                <i class="fas fa-eye-slash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Unhide" asp-route-id="@item.CategoryID" class="btn btn-sm btn-success">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

