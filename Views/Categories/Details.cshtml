@model StudentFreelance.Models.Category
<link rel="stylesheet" href="~/css/category/details.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-center mt-4">
    <table class="table table-bordered w-auto">
        <tr>
            <th>Tên</th>
            <td>@Model.CategoryName</td>
        </tr>
        <tr>
            <th>Loại</th>
            <td>
                @(Model.CategoryType == "field" ? "Lĩnh vực" :
                    Model.CategoryType == "skill" ? "Kỹ năng" : "Ngành")
            </td>
        </tr>
        <tr>
            <th>Mô tả</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Danh mục lớn</th>
            <td>@Model.ParentCategory?.CategoryName</td>
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Đang hoạt động</span>
                }
                else
                {
                    <span class="badge bg-secondary">Đã bị ẩn</span>
                }
            </td>
        </tr>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-primary me-2">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
