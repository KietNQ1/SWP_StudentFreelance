@model StudentFreelance.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Login - STJobs</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="split-layout">
        <!-- Left Side -->
        <div class="left-side">
            <img src="~/image/work.jpg" alt="Background Image" class="left-image" />
        </div>

        <!-- Right Side -->
        <div class="right-side">
            <div class="container">
                <div class="animated-title">
                    <h1>ST Job</h1>
                </div>
                <div class="form-card">
                    <div class="form-title">
                        <h2><i class="fas fa-user-circle"></i> Login</h2>
                        <p class="subtitle">Welcome back! Please enter your credentials.</p>
                    </div>                  
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })                 
                    <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
                        <div class="form-group">
                            <label for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Email" type="email" id="Email" class="form-control with-icon" placeholder="Enter your email" required />
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Password" class="form-label">
                                <i class="fas fa-lock"></i> Password
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Password" type="password" id="Password" class="form-control with-icon" placeholder="Enter your password" required />
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group checkbox-group">
                            <input asp-for="RememberMe" type="checkbox" id="RememberMe" class="form-control-checkbox" />
                            <label for="RememberMe" class="checkbox-label">Remember Me</label>
                        </div>

                        <button type="submit" class="submit-btn">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                        <div class="or-circle">OR</div>
                        <button type="button" class="submit-btn google-btn" onclick="location.href='@Url.Action("ExternalLogin", "Account", new { provider = "Google", returnUrl = Url.Content("~/") })'">
                            <i class="fab fa-google"></i> Login with Google
                        </button>
                    </form>

                    <div class="back-link">
                        <a asp-controller="Account" asp-action="ForgotPassword">
                            <i class="fas fa-unlock-alt"></i> Forgot Password?
                        </a>
                    </div>
                    <div class="back-link" style="margin-top:10px;">
                        <a asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Create New Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
