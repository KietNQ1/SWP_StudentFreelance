@model StudentFreelance.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="~/css/loginst.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h1 class="brand-title">STJob</h1>

            <form asp-action="Login" asp-controller="Account" method="post">
                <h3>Login Here</h3>

                @* Hiển thị thông báo đăng ký thành công *@
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" style="margin-bottom: 1rem;">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group account">
                    <input asp-for="Email" placeholder="EMAIL" required />
                    <span class="icon"><i class="fas fa-envelope"></i></span>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group account">
                    <input asp-for="Password" placeholder="PASSWORD" type="password" required />
                    <span class="icon"><i class="fas fa-lock"></i></span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="options">
                    <label><input asp-for="RememberMe" /> Remember me</label>
                    <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
                </div>

                <button type="submit" class="btn-login">Login</button>

                <p class="register">
                    To Register New Account → <a asp-action="Register" asp-controller="Account">Click Here</a>
                </p>

                <div class="or-divider">or</div>

                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google", returnUrl = "/" })" class="btn-google">
                    <img src="https://simpleicons.org/icons/google.svg" alt="Google Icon" />
                    Login with Google
                </a>

            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
