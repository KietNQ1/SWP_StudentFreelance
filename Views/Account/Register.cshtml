@model StudentFreelance.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null; // nếu bạn dùng layout, hãy thay bằng "_Layout"
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register Form</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/loginst.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>

    <div class="login-container">
        <div class="login-box">
            <h1 class="brand-title">STJob</h1>

            <form asp-action="Register" asp-controller="Account" method="post">
                <h3>Register Here</h3>

                @* Hiển thị lỗi validation *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group account">
                    <input asp-for="FullName" placeholder="FULL NAME" required />
                    <span class="icon"><i class="fas fa-user"></i></span>
                </div>
                <span asp-validation-for="FullName" class="text-danger"></span>

                <div class="input-group account">
                    <input asp-for="Email" placeholder="EMAIL" required />
                    <span class="icon"><i class="fas fa-envelope"></i></span>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group account">
                    <input asp-for="Password" placeholder="PASSWORD" type="password" required />
                    <span class="icon"><i class="fas fa-lock"></i></span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="input-group account">
                    <input asp-for="ConfirmPassword" placeholder="CONFIRM PASSWORD" type="password" required />
                    <span class="icon"><i class="fas fa-lock"></i></span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <button type="submit" class="btn-login">Register</button>

                <p class="register">Already have an account? → <a asp-controller="Account" asp-action="Login">Login Here</a></p>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
