@using StudentFreelance.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null; // nếu dùng layout thì thay bằng tên layout như "_Layout"
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Register - ST Job</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
    <div class="split-layout">
        <!-- Left image -->
        <div class="left-side">
            <img src="~/image/work.jpg" alt="Background" class="left-image" />
        </div>

        <!-- Right form -->
        <div class="right-side">
            <div class="container">
                <div class="animated-title">
                    <h1>ST Job</h1>
                </div>
                <div class="form-card">
                    <div class="form-title">
                        <h2><i class="fas fa-user-plus"></i> Register</h2>
                        <p class="subtitle">Tạo tài khoản mới</p>
                    </div>

                    <form asp-controller="Account" asp-action="Register" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Full Name -->
                        <div class="form-group">
                            <label for="FullName" class="form-label">
                                <i class="fas fa-user"></i> Họ và tên
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="FullName" id="FullName" class="form-control with-icon" placeholder="Nhập họ và tên" required />
                                <i class="fas fa-user input-icon"></i>
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Địa chỉ email
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Email" id="Email" type="email" class="form-control with-icon" placeholder="Địa chỉ email" required />
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group">
                            <label for="Password" class="form-label">
                                <i class="fas fa-lock"></i> Password
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Password" id="Password" type="password" class="form-control with-icon" placeholder="Nhập mật khẩu" required />
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group">
                            <label for="ConfirmPassword" class="form-label">
								<i class="fas fa-lock"></i> Xác nhận mật khẩu
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control with-icon" placeholder=" Xác nhận mật khẩu" required />
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="form-group">
                            <label for="Role" class="form-label">
                                <i class="fas fa-user-tag"></i> Role
                            </label>
                            <div class="input-wrapper">
                                <select asp-for="Role" id="Role" class="form-control" required>
                                    <option value="" disabled selected>--- Chọn vai trò --</option>
                                    <option value="Student">----Học sinh---</option>
                                    <option value="Business">----Doanh nghiệp---</option>
                                </select>
                                <i class="fas fa-user-tag input-icon"></i>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="submit-btn">
                            <i class="fas fa-user-plus"></i> Register
                        </button>

                        <div class="back-link">
                            <a asp-controller="Account" asp-action="Login">
								<i class="fas fa-arrow-left"></i> Về đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
