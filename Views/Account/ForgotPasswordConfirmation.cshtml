@{
    ViewData["Title"] = "Kiểm tra email của bạn";
    Layout = null;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/ForgotPassword.css" />

<div class="split-layout">
    <!-- Left Side -->
    <div class="left-side">
        <img src="~/image/work.jpg" alt="Background Image" class="left-image" />
    </div>

    <!-- Right Side -->
    <div class="right-side">    
        <div class="container">
            <div class="animated-title">
                <h1>ST Job</h1>
            </div>
            <div class="form-card">
                <div class="form-title">
                    <h2><i class="fas fa-envelope-open-text"></i> Kiểm tra email của bạn</h2>
                    <p class="subtitle">Nếu email bạn nhập đã được đăng ký, liên kết đặt lại mật khẩu đã được gửi đến hộp thư của bạn.</p>
                </div>

                <div class="success-message" style="opacity: 1; transform: translateY(0); animation: none;">
                    <i class="fas fa-check-circle"></i>
                    <span>Hãy kiểm tra email và làm theo hướng dẫn để khôi phục mật khẩu của bạn nhé!</span>
                </div>

                <div class="back-link">
                    <a asp-action="Login" asp-controller="Account">
						<i class="fas fa-arrow-left"></i> Về đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
