@model StudentFreelance.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/UserEdit.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user-edit me-2"></i> Edit User</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label"><i class="fas fa-user me-2"></i>Full Name</label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label"><i class="fas fa-phone me-2"></i>Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label for="selectedRole" class="form-label"><i class="fas fa-user-tag me-2"></i>Role</label>
                            <select name="selectedRole" id="selectedRole" class="form-select">
                                @foreach (var role in ViewBag.AllRoles)
                                {
                                    <option value="@role" selected="@(role == ViewBag.CurrentRole)">@role</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                <i class="fas fa-toggle-on me-2"></i>Active Account
                            </label>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
