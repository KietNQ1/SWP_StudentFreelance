@model StudentFreelance.ViewModels.CreateRatingViewModel

@{
    ViewData["Title"] = "Gửi đánh giá";
}

<style>
    .rating-stars {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        margin-top: 10px;
    }

    .rating-stars input[type="radio"] {
        display: none;
    }

    .rating-stars label {
        font-size: 2rem;
        color: #ccc;
        cursor: pointer;
        transition: color 0.2s;
    }

    .rating-stars input:checked ~ label,
    .rating-stars label:hover,
    .rating-stars label:hover ~ label {
        color: #ffc107;
    }

    textarea.form-control {
        min-height: 150px;
        resize: vertical;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
        border-left: 4px solid #89AC46;
    }

    .btn-primary {
        background-color: #89AC46;
        border-color: #89AC46;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #6c9335;
        border-color: #6c9335;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4">
                <h4 class="mb-3">Đánh giá @Model.RevieweeName cho dự án <strong>@Model.ProjectTitle</strong></h4>

                <form asp-action="@(User.IsInRole("Student") ? "Create" : "CreateForStudent")" method="post">
                    <input type="hidden" asp-for="ProjectID" />
                    <input type="hidden" asp-for="ReviewerID" />
                    <input type="hidden" asp-for="RevieweeID" />
                    <input type="hidden" asp-for="ApplicationId" />

                    <div class="form-group">
                        <label class="form-label">Chọn số sao đánh giá:</label>
                        <div class="rating-stars">
                            @for (int i = 5; i >= 1; i--)
                            {
                                <input type="radio" id="star-@i" name="Score" value="@i" @(Model.Score == i ? "checked" : "") />
                                <label for="star-@i" title="@i sao">&#9733;</label>
                            }
                        </div>
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Comment" class="form-label">Nhận xét</label>
                        <textarea asp-for="Comment" class="form-control" placeholder="Viết đánh giá chi tiết của bạn tại đây..."></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send-fill"></i> Gửi đánh giá
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
