@model StudentFreelance.ViewModels.AdvertisementViewModel

@{
    ViewData["Title"] = "Delete Advertisement";
}

<link rel="stylesheet" href="~/css/AdvertisementManage.css" />

<div class="topbar">
    <h1><i class="fas fa-trash"></i> Delete Advertisement</h1>
    <div class="filter-row">
        <div class="filter-group" style="background-color: #fff3cd; padding: 15px; border-radius: 10px; border-left: 5px solid #ffc107;">
            @if (Model.StatusID == 1) 
            {
                <p><strong>Note:</strong> Pending advertisements will be marked as canceled and will not be processed for approval. You can renew this advertisement later if desired.</p>
            }
            else
            {
                <p><strong>Note:</strong> The advertisement will be marked as canceled and will no longer be displayed. You can renew this advertisement later if desired.</p>
            }
        </div>
    </div>
</div>

<div class="table-container">
    <div style="display: flex; gap: 30px; flex-wrap: wrap;">
        <div style="flex: 0 0 300px;">
            <img src="~/uploads/advertisements/@Model.ImagePath" alt="Advertisement" class="ad-image" style="width: 100%; height: auto; max-height: 300px;" />
        </div>
        <div style="flex: 1; min-width: 300px;">
            <div style="margin-bottom: 20px;">
                <h3>Advertisement Details</h3>
            </div>
            
            <div style="display: grid; grid-template-columns: 180px 1fr; row-gap: 15px; align-items: center;">
                <div><strong>Package Type:</strong></div>
                <div>
                    @if (Model.PackageTypeID == 2)
                    {
                        <span class="package-type package-premium">Premium Package</span>
                    }
                    else
                    {
                        <span class="package-type package-basic">Basic Package</span>
                    }
                </div>

                <div><strong>Current Status:</strong></div>
                <div>
                    @if (Model.StatusID == 1)
                    {
                        <span class="status-pending">Pending</span>
                    }
                    else if (Model.StatusID == 2)
                    {
                        <span class="status-approved">Approved</span>
                    }
                    else if (Model.StatusID == 3)
                    {
                        <span class="status-rejected">Rejected</span>
                    }
                    else if (Model.StatusID == 4)
                    {
                        <span class="status-expired">Expired</span>
                    }
                </div>

                <div><strong>Status After Deletion:</strong></div>
                <div>
                    <span class="status-rejected">Canceled</span>
                </div>

                <div><strong>Created Date:</strong></div>
                <div>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
            </div>

            <form asp-action="Delete" method="post" style="margin-top: 30px;">
                <input type="hidden" asp-for="Id" />
                <div style="display: flex; gap: 15px; justify-content: flex-end;">
                    <a asp-action="MyAdvertisements" class="btn-secondary" style="text-decoration: none;">Back to List</a>
                    <button type="submit" class="action-btn delete" style="padding: 14px 24px;">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div> 