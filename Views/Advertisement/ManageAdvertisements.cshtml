@model StudentFreelance.ViewModels.AdvertisementListViewModel

@{
    ViewData["Title"] = "Quản Lý Quảng Cáo";
    Layout = "_Dashboard";
}

<link rel="stylesheet" href="~/css/AdvertisementManage.css" />

<div class="topbar">
    <h1><i class="fas fa-ad"></i> Quản Lý Quảng Cáo</h1>

    <div class="ad-tabs">
        <div class="ad-tab active" onclick="switchTab('pending')">
            Đang chờ duyệt
            <span class="ad-badge ad-badge-warning">
                @Model.Advertisements.Count(a => !a.IsApproved && a.IsActive)
            </span>
        </div>
        <div class="ad-tab" onclick="switchTab('active')">
            Đang hoạt động
            <span class="ad-badge ad-badge-success">
                @Model.Advertisements.Count(a => a.IsApproved && a.IsActive && a.EndDate >= DateTime.Now)
            </span>
        </div>
        <div class="ad-tab" onclick="switchTab('inactive')">
            Không hoạt động
            <span class="ad-badge ad-badge-danger">
                @Model.Advertisements.Count(a => !a.IsActive)
            </span>
        </div>
        <div class="ad-tab" onclick="switchTab('expired')">
            Hết hạn
            <span class="ad-badge ad-badge-secondary">
                @Model.Advertisements.Count(a => a.IsApproved && a.IsActive && a.EndDate < DateTime.Now)
            </span>
        </div>
    </div>
</div>

<div class="tab-content" id="advertisementTabsContent">
    <!-- Tab Quảng Cáo Chờ Duyệt -->
    <div class="table-container" id="pending-tab">
        @if (!Model.Advertisements.Any(a => !a.IsApproved && a.IsActive))
        {
            <div class="no-data">
                Không có quảng cáo đang chờ duyệt.
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hình ảnh</th>
                        <th>Doanh nghiệp</th>
                        <th>Gói</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ad in Model.Advertisements.Where(a => !a.IsApproved && a.IsActive))
                    {
                        <tr>
                            <td>@ad.Id</td>
                            <td>
                                <img src="~/uploads/advertisements/@ad.ImagePath" alt="Advertisement" class="ad-image" style="width: 100px; height: 60px;" />
                            </td>
                            <td>@(string.IsNullOrEmpty(ad.BusinessName) ? "Không xác định" : ad.BusinessName)</td>
                            <td>
                                @if (ad.PackageTypeID == 2)
                                {
                                    <span class="package-type package-premium">Gói Nổi Bật</span>
                                }
                                else
                                {
                                    <span class="package-type package-basic">Gói Cơ Bản</span>
                                }
                            </td>
                            <td>@ad.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <form asp-action="Approve" asp-route-id="@ad.Id" method="post" style="display:inline;">
                                    <button type="submit" class="action-btn approve">
                                        <i class="fas fa-check"></i> Duyệt
                                    </button>
                                </form>
                                <form asp-action="Reject" asp-route-id="@ad.Id" method="post" style="display:inline;">
                                    <button type="submit" class="action-btn reject">
                                        <i class="fas fa-times"></i> Từ chối
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Tab Quảng Cáo Đang Hoạt Động -->
    <div class="table-container" id="active-tab" style="display: none;">
        @if (!Model.Advertisements.Any(a => a.IsApproved && a.IsActive && a.EndDate >= DateTime.Now))
        {
            <div class="no-data">
                Không có quảng cáo đang hoạt động.
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hình ảnh</th>
                        <th>Doanh nghiệp</th>
                        <th>Gói</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Người duyệt</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ad in Model.Advertisements.Where(a => a.IsApproved && a.IsActive && a.EndDate >= DateTime.Now))
                    {
                        <tr>
                            <td>@ad.Id</td>
                            <td>
                                <img src="~/uploads/advertisements/@ad.ImagePath" alt="Advertisement" class="ad-image" style="width: 100px; height: 60px;" />
                            </td>
                            <td>@(string.IsNullOrEmpty(ad.BusinessName) ? "Không xác định" : ad.BusinessName)</td>
                            <td>
                                @if (ad.PackageTypeID == 2)
                                {
                                    <span class="package-type package-premium">Gói Nổi Bật</span>
                                }
                                else
                                {
                                    <span class="package-type package-basic">Gói Cơ Bản</span>
                                }
                            </td>
                            <td>@ad.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@ad.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@ad.ApprovedByName</td>
                            <td>
                                <form asp-action="Reject" asp-route-id="@ad.Id" method="post" style="display:inline;">
                                    <button type="submit" class="action-btn delete">
                                        <i class="fas fa-ban"></i> Vô hiệu hóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Tab Quảng Cáo Không Hoạt Động -->
    <div class="table-container" id="inactive-tab" style="display: none;">
        @if (!Model.Advertisements.Any(a => !a.IsActive))
        {
            <div class="no-data">
                Không có quảng cáo không hoạt động.
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hình ảnh</th>
                        <th>Doanh nghiệp</th>
                        <th>Gói</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ad in Model.Advertisements.Where(a => !a.IsActive))
                    {
                        <tr>
                            <td>@ad.Id</td>
                            <td>
                                <img src="~/uploads/advertisements/@ad.ImagePath" alt="Advertisement" class="ad-image" style="width: 100px; height: 60px;" />
                            </td>
                            <td>@(string.IsNullOrEmpty(ad.BusinessName) ? "Không xác định" : ad.BusinessName)</td>
                            <td>
                                @if (ad.PackageTypeID == 2)
                                {
                                    <span class="package-type package-premium">Gói Nổi Bật</span>
                                }
                                else
                                {
                                    <span class="package-type package-basic">Gói Cơ Bản</span>
                                }
                            </td>
                            <td>@ad.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@ad.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="status-rejected">Không hoạt động</span>
                            </td>
                            <td>
                                <form asp-action="Activate" asp-route-id="@ad.Id" method="post" style="display:inline;">
                                    <button type="submit" class="action-btn approve">
                                        <i class="fas fa-play"></i> Kích hoạt lại
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Tab Quảng Cáo Hết Hạn -->
    <div class="table-container" id="expired-tab" style="display: none;">
        @if (!Model.Advertisements.Any(a => a.IsApproved && a.IsActive && a.EndDate < DateTime.Now))
        {
            <div class="no-data">
                Không có quảng cáo đã hết hạn.
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hình ảnh</th>
                        <th>Doanh nghiệp</th>
                        <th>Gói</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ad in Model.Advertisements.Where(a => a.IsApproved && a.IsActive && a.EndDate < DateTime.Now))
                    {
                        <tr>
                            <td>@ad.Id</td>
                            <td>
                                <img src="~/uploads/advertisements/@ad.ImagePath" alt="Advertisement" class="ad-image" style="width: 100px; height: 60px;" />
                            </td>
                            <td>@(string.IsNullOrEmpty(ad.BusinessName) ? "Không xác định" : ad.BusinessName)</td>
                            <td>
                                @if (ad.PackageTypeID == 2)
                                {
                                    <span class="package-type package-premium">Gói Nổi Bật</span>
                                }
                                else
                                {
                                    <span class="package-type package-basic">Gói Cơ Bản</span>
                                }
                            </td>
                            <td>@ad.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@ad.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="status-expired">Đã hết hạn</span>
                            </td>
                            <td>
                                <form asp-action="Renew" asp-route-id="@ad.Id" method="post" style="display:inline;">
                                    <button type="submit" class="action-btn renew">
                                        <i class="fas fa-sync"></i> Gia hạn
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script>
        function switchTab(tabId) {
            document.querySelectorAll('.table-container').forEach(tab => {
                tab.style.display = 'none';
            });

            document.querySelectorAll('.ad-tab').forEach(tabBtn => {
                tabBtn.classList.remove('active');
            });

            document.getElementById(tabId + '-tab').style.display = 'block';

            document.querySelectorAll('.ad-tab').forEach(tabBtn => {
                if (tabBtn.textContent.trim().toLowerCase().startsWith(tabId.toLowerCase())) {
                    tabBtn.classList.add('active');
                }
            });
        }
    </script>
}
