                                }
                                else if (report.StatusName == "ƒê√£ h·ªßy")
                                {
                                    <span class="status-inactive">@report.StatusName</span>
                                }
                                else
                                {
                                    <span class="badge @(report.StatusName == "ƒêang x·ª≠ l√Ω" ? "bg-warning" : 
                                                  report.StatusName == "ƒê√£ x·ª≠ l√Ω" ? "bg-success" : 
                                                  report.StatusName == "ƒê√£ h·ªßy" ? "bg-danger" : "bg-secondary")">
                                        @report.StatusName
                                    </span>
                                }
                            </td>
                            <td class="action-cell">
                                <a asp-action="Details" asp-route-id="@report.ReportID" class="action-btn edit">
                                    <i class="fas fa-eye"></i> Chi ti·∫øt
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.TotalPages > 1)
            {
                <div class="pagination-container">
                    <div class="pagination-info">
                        Hi·ªÉn th·ªã @(((Model.CurrentPage - 1) * Model.PageSize) + 1) ƒë·∫øn @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)) c·ªßa @Model.TotalCount b√°o c√°o
                    </div>
                    
                    <div class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <a asp-action="ListReport" 
                               asp-route-currentPage="1"
                               asp-route-selectedStatusId="@Model.SelectedStatusId"
                               asp-route-selectedTypeId="@Model.SelectedTypeId"
                               asp-route-searchQuery="@Model.SearchQuery"
                               class="pagination-btn">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                            
                            <a asp-action="ListReport" 
                               asp-route-currentPage="@(Model.CurrentPage - 1)"
                               asp-route-selectedStatusId="@Model.SelectedStatusId"
                               asp-route-selectedTypeId="@Model.SelectedTypeId"
                               asp-route-searchQuery="@Model.SearchQuery"
                               class="pagination-btn">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        }
                        
                        @{
                            int startPage = Math.Max(1, Model.CurrentPage - 2);
                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            
                            if (startPage > 1)
                            {
                                <span class="pagination-ellipsis">...</span>
                            }
                        }
                        
                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <a asp-action="ListReport" 
                               asp-route-currentPage="@i"
                               asp-route-selectedStatusId="@Model.SelectedStatusId"
                               asp-route-selectedTypeId="@Model.SelectedTypeId"
                               asp-route-searchQuery="@Model.SearchQuery"
                               class="pagination-btn @(i == Model.CurrentPage ? "active" : "")">
                                @i
                            </a>
                        }
                        
                        @{
                            if (endPage < Model.TotalPages)
                            {
                                <span class="pagination-ellipsis">...</span>
                            }
                        }
                        
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <a asp-action="ListReport" 
                               asp-route-currentPage="@(Model.CurrentPage + 1)"
                               asp-route-selectedStatusId="@Model.SelectedStatusId"
                               asp-route-selectedTypeId="@Model.SelectedTypeId"
                               asp-route-searchQuery="@Model.SearchQuery"
                               class="pagination-btn">
                                <i class="fas fa-angle-right"></i>
                            </a>
                            
                            <a asp-action="ListReport" 
                               asp-route-currentPage="@Model.TotalPages"
                               asp-route-selectedStatusId="@Model.SelectedStatusId"
                               asp-route-selectedTypeId="@Model.SelectedTypeId"
                               asp-route-searchQuery="@Model.SearchQuery"
                               class="pagination-btn">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        }
                    </div>
                </div>
            }
        }
        else
