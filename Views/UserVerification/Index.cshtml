@model IEnumerable<StudentFreelance.ViewModels.UserVerificationViewModel>

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewData["Title"] = "User Verification";
    var currentStatus = ViewData["StatusFilter"]?.ToString() ?? "";
    var currentRole = ViewData["RoleFilter"]?.ToString() ?? "";
    var searchString = ViewData["CurrentFilter"]?.ToString() ?? "";
}

<div class="freelancer-management">
    <h1>Freelancer Management</h1>
    
    <form asp-action="Index" method="get" id="filterForm">
        <div class="search-filter-container">
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text" name="searchString" placeholder="Search freelancer..." value="@searchString" />
            </div>
            
            <div class="filter-dropdown">
                <select name="roleFilter" class="custom-select">
                    <option value="">All Roles</option>
                    @if (currentRole == "student")
                    {
                        <option value="student" selected>Student</option>
                    }
                    else
                    {
                        <option value="student">Student</option>
                    }
                    
                    @if (currentRole == "business")
                    {
                        <option value="business" selected>Business</option>
                    }
                    else
                    {
                        <option value="business">Business</option>
                    }
                    
                    @if (currentRole == "admin")
                    {
                        <option value="admin" selected>Admin</option>
                    }
                    else
                    {
                        <option value="admin">Admin</option>
                    }
                    
                    @if (currentRole == "moderator")
                    {
                        <option value="moderator" selected>Moderator</option>
                    }
                    else
                    {
                        <option value="moderator">Moderator</option>
                    }
                </select>
                <i class="fas fa-chevron-down dropdown-icon"></i>
            </div>
            
            <div class="filter-dropdown">
                <select name="statusFilter" class="custom-select">
                    <option value="">All Statuses</option>
                    @if (currentStatus == "active")
                    {
                        <option value="active" selected>Active</option>
                    }
                    else
                    {
                        <option value="active">Active</option>
                    }
                    
                    @if (currentStatus == "inactive")
                    {
                        <option value="inactive" selected>Inactive</option>
                    }
                    else
                    {
                        <option value="inactive">Inactive</option>
                    }
                    
                    @if (currentStatus == "verified")
                    {
                        <option value="verified" selected>Verified</option>
                    }
                    else
                    {
                        <option value="verified">Verified</option>
                    }
                    
                    @if (currentStatus == "flagged")
                    {
                        <option value="flagged" selected>Flagged</option>
                    }
                    else
                    {
                        <option value="flagged">Flagged</option>
                    }
                </select>
                <i class="fas fa-chevron-down dropdown-icon"></i>
            </div>
            
            <button type="submit" class="filter-button">Filter</button>
        </div>
    </form>
    
    <div class="freelancer-table-container">
        <table class="freelancer-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Verified</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>
                            <div class="user-info">
                                @item.FullName
                            </div>
                        </td>
                        <td>
                            @if (item.IsVerified)
                            {
                                <div class="verified-badge">
                                    <i class="fas fa-check-circle"></i> Verified
                                </div>
                            }
                        </td>
                        <td>@item.Email</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <div class="status-badge active">• Active</div>
                            }
                            else
                            {
                                <div class="status-badge inactive">• Inactive</div>
                            }
                            
                            @if (item.IsFlagged)
                            {
                                <div class="status-badge flagged">• Flagged</div>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.UserID" class="edit-button">Edit</a>
                                <button type="button" class="delete-button" onclick="confirmDelete(@item.UserID)">Delete</button>
                            </div>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Thêm Font Awesome nếu chưa có -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    /* Main Container */
    .main {
        background: linear-gradient(135deg, #89AC46 0%, #D3E671 100%);
        padding: 20px;
        min-height: 100vh;
    }
    
    /* Freelancer Management Container */
    .freelancer-management {
        padding: 0 20px;
    }
    
    /* Header */
    .freelancer-management h1 {
        color: white;
        font-size: 2rem;
        font-weight: 500;
        margin-bottom: 20px;
        text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }
    
    /* Search and Filter Container */
    .search-filter-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        align-items: center;
    }
    
    /* Search Box */
    .search-box {
        position: relative;
        flex: 2;
    }
    
    .search-box input {
        width: 100%;
        padding: 10px 15px 10px 40px;
        border-radius: 5px;
        border: none;
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        font-size: 14px;
        backdrop-filter: blur(10px);
    }
    
    .search-box input::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }
    
    .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: white;
    }
    
    /* Filter Dropdown */
    .filter-dropdown {
        position: relative;
        flex: 1;
    }
    
    .filter-dropdown select.custom-select {
        width: 100%;
        padding: 10px 15px;
        border-radius: 5px;
        border: none;
        background-color: rgba(211, 230, 113, 0.7);
        color: white;
        font-size: 14px;
        appearance: none;
        backdrop-filter: blur(10px);
    }
    
    .filter-dropdown select.custom-select option {
        background-color: #89AC46;
        color: white;
    }
    
    .dropdown-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: white;
        pointer-events: none;
    }
    
    /* Filter Button */
    .filter-button {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        background-color: rgba(137, 172, 70, 0.6);
        color: white;
        font-weight: 500;
        cursor: pointer;
        backdrop-filter: blur(10px);
        transition: background-color 0.3s;
    }
    
    .filter-button:hover {
        background-color: rgba(137, 172, 70, 0.8);
    }
    
    /* Table Container */
    .freelancer-table-container {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    /* Table Styles */
    .freelancer-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .freelancer-table th {
        text-align: left;
        padding: 15px 20px;
        color: white;
        font-weight: 500;
        background-color: rgba(211, 230, 113, 0.3);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .freelancer-table td {
        padding: 15px 20px;
        color: white;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .freelancer-table tbody tr:last-child td {
        border-bottom: none;
    }
    
    .freelancer-table tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }
    
    /* User Info */
    .user-info {
        display: flex;
        flex-direction: column;
    }
    
    /* Verified Badge */
    .verified-badge {
        display: inline-block;
        background-color: rgba(118, 171, 184, 0.5);
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        width: fit-content;
        text-align: center;
    }
    
    /* Status Badge */
    .status-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 14px;
        width: fit-content;
        margin-bottom: 5px;
    }
    
    .status-badge.active {
        background-color: rgba(137, 172, 70, 0.5);
        color: white;
    }
    
    .status-badge.inactive {
        background-color: rgba(255, 137, 137, 0.5);
        color: white;
    }
    
    .status-badge.flagged {
        background-color: rgba(128, 128, 128, 0.7);
        color: white;
    }
    
    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 10px;
    }
    
    .edit-button, .delete-button {
        padding: 8px 15px;
        border-radius: 5px;
        border: none;
        color: white;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }
    
    .edit-button {
        background-color: rgba(90, 155, 213, 0.5);
    }
    
    .edit-button:hover {
        background-color: rgba(90, 155, 213, 0.7);
    }
    
    .delete-button {
        background-color: rgba(255, 137, 137, 0.5);
    }
    
    .delete-button:hover {
        background-color: rgba(255, 137, 137, 0.7);
    }
</style>

<script>
    function confirmDelete(userId) {
        if (confirm("Are you sure you want to delete this user?")) {
            window.location.href = "@Url.Action("Delete")" + "/" + userId;
        }
    }
</script> 