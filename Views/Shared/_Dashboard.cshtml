@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/AdminSidebar.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Thêm CSS để đảm bảo dropdown hiển thị đúng */
        .dropdown-menu {
            display: block;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            padding: 0;
            margin: 0;
            border: none;
            box-shadow: none;
            background: transparent;
            position: static;
            width: 100%;
            border-radius: 0;
        }
        
        .dropdown.open .dropdown-menu {
            max-height: 200px;
        }
        
        .dropdown-toggle {
            cursor: pointer;
            width: 100%;
            text-align: left;
        }
        
        /* Đảm bảo không có border hoặc background không mong muốn */
        .sidebar-menu .dropdown-menu a {
            padding: 12px 50px;
            background: rgba(102, 126, 234, 0.05);
            border: none;
        }
        /* Logo wrapper */
        .logo {
            flex-shrink: 0;
            min-width: 120px;
        }

        /* Logo link */
        .logo-link {
            text-decoration: none;
            font-size: 1.5rem;
            font-weight: 800;
            color: #89AC46;
            letter-spacing: -0.5px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            white-space: nowrap;
            margin-left: 12%;
        }

            .logo-link:hover {
                transform: scale(1.05);
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            }

        /* Logo dot animation */
        .logo-dot {
            color: #D3D6DD;
            font-size: 32px;
            margin-left: -2px;
            animation: pulse 2s infinite;
        }

     
    </style>
</head>
<body>
    <div class="layout">

        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="logo-link">
                    Home<span class="logo-dot">.</span>
                </a>
            </div>
            <nav class="sidebar-menu">
                
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a href="#">Calendar</a>
                <div class="dropdown">
                    <button class="dropdown-toggle" onclick="toggleDropdown(this)">Profile</button>
                    <div class="dropdown-menu">
                        <a href="#">My Profile</a>
                        <a href="#">Freelancers</a>
                        <a href="#">Companies</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropdown-toggle" onclick="toggleDropdown(this)">Customer Management</button>
                    <div class="dropdown-menu">
                        <a href="#">Freelancers</a>
                        <a href="#">Companies</a>
                        <a asp-controller="UserVerification" asp-action="Index">User Verification</a>
                    </div>
                </div>
                <a href="#">Project Management</a>
                <a href="#">Applications</a>
                <a href="#">Payments</a>
                <a href="#">Reviews & Reports</a>
                <a asp-controller="Advertisement" asp-action="ManageAdvertisements">Manage Advertisements</a>
                <a href="#">System Settings</a>
            </nav>
        </aside>

        <!-- Main content area -->
        <main class="main container-fluid">
            @RenderBody()
        </main>
    </div>

    <!-- Dropdown script -->
    <script>
        // Cải thiện hàm toggleDropdown
        function toggleDropdown(button) {
            // Lấy phần tử dropdown chứa button
            const dropdown = button.closest(".dropdown");
            
            // Đóng tất cả các dropdown khác
            const allDropdowns = document.querySelectorAll('.dropdown');
            allDropdowns.forEach(item => {
                if (item !== dropdown && item.classList.contains('open')) {
                    item.classList.remove('open');
                }
            });
            
            // Toggle class 'open' cho dropdown hiện tại
            dropdown.classList.toggle("open");
        }
        
        // Thêm xử lý đóng dropdown khi click bên ngoài
        document.addEventListener('click', function(event) {
            const dropdowns = document.querySelectorAll('.dropdown.open');
            dropdowns.forEach(dropdown => {
                if (!dropdown.contains(event.target)) {
                    dropdown.classList.remove('open');
                }
            });
        }, true);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>