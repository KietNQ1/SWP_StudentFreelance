@using Microsoft.AspNetCore.Identity
@inject UserManager<StudentFreelance.Models.ApplicationUser> UserManager
@{
    Layout = null;
    var user = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/AdminSidebar.css" rel="stylesheet" />
    <link href="~/css/admin-header.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        /* Thêm CSS để đảm bảo dropdown hiển thị đúng */
        .dropdown-menu {
            display: block;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            padding: 0;
            margin: 0;
            border: none;
            box-shadow: none;
            background: transparent;
            position: static;
            width: 100%;
            border-radius: 0;
        }
        
        .dropdown.open .dropdown-menu {
            max-height: 200px;
        }
        
        .dropdown-toggle {
            cursor: pointer;
            width: 100%;
            text-align: left;
            display: flex;
            align-items: center;
        }
        
        /* Đảm bảo không có border hoặc background không mong muốn */
        .sidebar-menu .dropdown-menu a {
            padding: 12px 50px;
            background: rgba(102, 126, 234, 0.05);
            border: none;
        }

        /* Menu item with icons */
        .sidebar-menu a i, 
        .sidebar-menu .dropdown-toggle i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        /* Active menu item */
        .sidebar-menu a.active {
            color: #5CB338;
            background: rgba(92, 179, 56, 0.1);
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Sidebar - bây giờ ở bên ngoài .layout -->
    <aside class="sidebar">
        <div class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo-link">
                Home<span class="logo-dot">.</span>
            </a>
        </div>
        <nav class="sidebar-menu">
            <a asp-controller="Dashboard" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            @if (User.IsInRole("Admin"))
            {
                <div class="dropdown">
                    <button class="dropdown-toggle" onclick="toggleDropdown(this)">
                        <i class="fas fa-user-cog"></i> <span>Quản lý người dùng</span>
                    </button>
                    <div class="dropdown-menu">
                        <a asp-controller="AdminUser" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "AdminUser" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            Danh sách người dùng
                        </a>
                        <a asp-controller="UserVerification" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "UserVerification" ? "active" : "")">
                            Xác thực người dùng
                        </a>
                    </div>
                </div>
            }
            <div class="dropdown">
                <button class="dropdown-toggle" onclick="toggleDropdown(this)">
                    <i class="fas fa-project-diagram"></i> <span>Quản lý dự án</span>
                </button>
                <div class="dropdown-menu">
                    <a asp-controller="Project" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Project" ? "active" : "")">
                        Danh sách dự án
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Categories" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Categories" ? "active" : "")">
                            Danh mục dự án
                        </a>
                        <a asp-controller="Skills" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Skills" ? "active" : "")">
                            Kỹ năng
                        </a>
                    }
                </div>
            </div>
            <a asp-controller="AdminUser" asp-action="Payments" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "AdminUser" && ViewContext.RouteData.Values["Action"].ToString() == "Payments" ? "active" : "")">
                <i class="fas fa-money-bill-wave"></i> Thanh toán
            </a>
            <div class="dropdown">
                <button class="dropdown-toggle" onclick="toggleDropdown(this)">
                    <i class="fas fa-exclamation-circle"></i> <span>Báo cáo & Đánh giá</span>
                </button>
                <div class="dropdown-menu">
                    <a asp-controller="Report" asp-action="ListReport" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Report" ? "active" : "")">
                        Danh sách báo cáo
                    </a>
                    <a asp-controller="Rating" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Rating" ? "active" : "")">
                        Đánh giá
                    </a>
                </div>
            </div>
            <a asp-controller="Advertisement" asp-action="ManageAdvertisements" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Advertisement" && ViewContext.RouteData.Values["Action"].ToString() == "ManageAdvertisements" ? "active" : "")">
                <i class="fas fa-ad"></i> Quản lý quảng cáo
            </a>
            <a asp-controller="Notification" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Notification" ? "active" : "")">
                <i class="fas fa-bell"></i> Thông báo
            </a>
        </nav>
    </aside>

    <!-- Content area with header and main content -->
    <div class="content-container">
        <!-- Admin Header -->
        <header class="admin-header">
            <div class="page-title">
                <i class="fas fa-@(ViewData["HeaderIcon"] ?? "tachometer-alt")"></i>
                @ViewData["Title"]
            </div>
            <div class="admin-profile">
                
                <div class="admin-avatar">
                    @if (user != null && !string.IsNullOrEmpty(user.Avatar))
                    {
                        <img src="@Url.Content(user.Avatar)" alt="@(user.FullName ?? user.UserName)">
                    }
                    else
                    {
                        <img src="~/image/default-avatar.png" alt="Admin Avatar">
                    }
                </div>
                <div>
                    <div class="admin-name">@(user?.FullName ?? "Admin User")</div>
                    <div class="admin-role">@(user?.UserName ?? "Administrator")</div>
                </div>
            </div>
        </header>

        <!-- Main content area -->
        <main class="main-container">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Cải thiện hàm toggleDropdown
        function toggleDropdown(button) {
            // Lấy phần tử dropdown chứa button
            const dropdown = button.closest(".dropdown");
            
            // Đóng tất cả các dropdown khác
            const allDropdowns = document.querySelectorAll('.dropdown');
            allDropdowns.forEach(item => {
                if (item !== dropdown && item.classList.contains('open')) {
                    item.classList.remove('open');
                }
            });
            
            // Toggle class 'open' cho dropdown hiện tại
            dropdown.classList.toggle("open");
            
            // Nếu dropdown đang mở và chứa menu item đang active, tự động mở dropdown đó
            if (dropdown.querySelector('a.active')) {
                dropdown.classList.add('open');
            }
        }
        
        // Thêm xử lý đóng dropdown khi click bên ngoài
        document.addEventListener('click', function(event) {
            const dropdowns = document.querySelectorAll('.dropdown.open');
            dropdowns.forEach(dropdown => {
                if (!dropdown.contains(event.target)) {
                    // Không đóng dropdown nếu nó có menu item đang active
                    if (!dropdown.querySelector('a.active')) {
                        dropdown.classList.remove('open');
                    }
                }
            });
        }, true);

        // Đặt tên admin từ thông tin người dùng hiện tại (có thể thay thế bằng dữ liệu thực)
        document.addEventListener('DOMContentLoaded', function() {
            // Mở dropdown chứa menu item active
            document.querySelectorAll('.dropdown').forEach(dropdown => {
                if (dropdown.querySelector('a.active')) {
                    dropdown.classList.add('open');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>