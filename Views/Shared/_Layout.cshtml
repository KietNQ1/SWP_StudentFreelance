@using Microsoft.EntityFrameworkCore
@using StudentFreelance.DbContext
@using StudentFreelance.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentFreelance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentFreelance.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        /* Header search bar styles */
        .navbar .input-group {
            border-radius: 0.375rem;
            overflow: hidden;
        }
        .navbar .input-group .form-control {
            border-right: none;
        }
        .navbar .input-group .form-select {
            border-left: none;
            border-right: none;
        }
        .navbar .input-group .btn {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StudentFreelance</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Tìm kiếm
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Search" asp-action="SearchJob">Tìm dự án</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Search" asp-action="SearchStudents">Tìm sinh viên</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Search" asp-action="SearchBusinesses">Tìm doanh nghiệp</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                        </li>
                    </ul>
                    
                    <form class="d-flex mx-3" style="width: 450px;" asp-controller="Search" asp-action="SearchJob" method="get">
                        <div class="input-group">
                            <input type="text" name="query" class="form-control" placeholder="Nhập tên dự án..." aria-label="Tìm kiếm">
                            <select name="provinceId" class="form-select" style="max-width: 150px;">
                                <option value="">Tất cả địa điểm</option>
                                @foreach (var province in ((ApplicationDbContext)ViewContext.HttpContext.RequestServices.GetService(typeof(ApplicationDbContext))).Provinces.OrderBy(p => p.Name))
                                {
                                    <option value="@province.ProvinceID">@province.Name</option>
                                }
                            </select>
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StudentFreelance - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function() {
            $('.select2-skills').select2({
                placeholder: "Chọn kỹ năng",
                allowClear: true,
                dropdownParent: $('.dropdown-menu')
            });
            
            $('.select2-provinces').select2({
                placeholder: "Chọn thành phố",
                allowClear: true,
                dropdownParent: $('.dropdown-menu')
            });
            
            // Ngăn sự kiện click trong dropdown làm đóng dropdown
            $('.dropdown-menu').on('click', function(e) {
                e.stopPropagation();
            });
            
            // Khởi tạo Select2 cho dropdown tỉnh/thành phố trong thanh tìm kiếm header
            $('form.d-flex select[name="provinceId"]').select2({
                placeholder: "Tất cả địa điểm",
                allowClear: true,
                minimumResultsForSearch: 6,
                width: '150px'
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
