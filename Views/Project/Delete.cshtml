@model StudentFreelance.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Project" asp-action="Index">Projects</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Project</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Delete Project</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Warning!</h4>
                        <p>Are you sure you want to delete this project? This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <h4>@Model.Title</h4>
                        <div class="d-flex flex-wrap mb-3 gap-2">
                            <span class="badge bg-primary">@Model.Category.CategoryName</span>
                            <span class="badge @(Model.StatusID == 1 ? "bg-success" : Model.StatusID == 2 ? "bg-warning" : "bg-danger")">
                                @Model.Status.StatusName
                            </span>
                            <span class="badge bg-info">@Model.Type.TypeName</span>
                        </div>

                        <div class="d-flex gap-4 text-muted mb-3">
                            <div>
                                <i class="bi bi-calendar-date"></i> Posted: @Model.CreatedAt.ToString("dd/MM/yyyy")
                            </div>
                            <div>
                                <i class="bi bi-hourglass-split"></i> Deadline: @Model.Deadline.ToString("dd/MM/yyyy")
                            </div>
                            <div>
                                <i class="bi bi-currency-dollar"></i> Budget: @Model.Budget.ToString("C")
                            </div>
                        </div>

                        <div class="mb-3">
                            <strong>Description:</strong>
                            <p class="mt-2">@Html.Raw(Model.Description)</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">Project Details</h6>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Start Date:</span>
                                        <span>@Model.StartDate.ToString("dd/MM/yyyy")</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>End Date:</span>
                                        <span>@Model.EndDate.ToString("dd/MM/yyyy")</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Applications:</span>
                                        <span>@Model.StudentApplications.Count</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Attachments:</span>
                                        <span>@Model.ProjectAttachments.Count</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Impact of Deletion</h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">Deleting this project will also affect:</p>
                                    <ul>
                                        <li>All student applications to this project</li>
                                        <li>All attachments associated with this project</li>
                                        <li>Skill requirements linked to this project</li>
                                        <li>Transactions related to this project</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProjectID" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.ProjectID" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Project
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 