@model StudentFreelance.Models.Project

@{
    ViewData["Title"] = "Xóa Dự Án";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Project" asp-action="Index">Dự án</a></li>
            <li class="breadcrumb-item active" aria-current="page">Xóa dự án</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Xóa dự án</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Cảnh báo!</h4>
                        <p>Bạn có chắc chắn muốn xóa dự án này không? Hành động này sẽ không thể hoàn tác.</p>
                    </div>

                    <div class="mb-4">
                        <h4>@Model.Title</h4>
                        <div class="d-flex flex-wrap mb-3 gap-2">
                            <span class="badge bg-primary">@Model.Category.CategoryName</span>
                            <span class="badge @(Model.StatusID == 1 ? "bg-success" : Model.StatusID == 2 ? "bg-warning" : "bg-danger")">
                                @Model.Status.StatusName
                            </span>
                            <span class="badge bg-info">@Model.Type.TypeName</span>
                        </div>

                        <div class="d-flex gap-4 text-muted mb-3">
                            <div>
                                <i class="bi bi-calendar-date"></i> Ngày đăng: @Model.CreatedAt.ToString("dd/MM/yyyy")
                            </div>
                            <div>
                                <i class="bi bi-hourglass-split"></i> Hạn nộp: @Model.Deadline.ToString("dd/MM/yyyy")
                            </div>
                            <div>
                                <i class="bi bi-currency-dollar"></i> Ngân sách: @Model.Budget.ToString("C")
                            </div>
                        </div>

                        <div class="mb-3">
                            <strong>Mô tả:</strong>
                            <p class="mt-2">@Html.Raw(Model.Description)</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">Chi tiết dự án</h6>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Ngày bắt đầu:</span>
                                        <span>@Model.StartDate.ToString("dd/MM/yyyy")</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Ngày kết thúc:</span>
                                        <span>@Model.EndDate.ToString("dd/MM/yyyy")</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Số lượng ứng tuyển:</span>
                                        <span>@Model.StudentApplications.Count</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Số tệp đính kèm:</span>
                                        <span>@Model.ProjectAttachments.Count</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Ảnh hưởng khi xóa</h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">Việc xóa dự án này sẽ đồng thời ảnh hưởng đến:</p>
                                    <ul>
                                        <li>Tất cả đơn ứng tuyển của sinh viên vào dự án này</li>
                                        <li>Tất cả tệp đính kèm liên quan đến dự án</li>
                                        <li>Yêu cầu kỹ năng liên kết với dự án này</li>
                                        <li>Các giao dịch liên quan tới dự án này</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProjectID" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.ProjectID" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại chi tiết dự án
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xóa dự án
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
