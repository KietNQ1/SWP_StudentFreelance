@using System.Security.Claims
@model StudentFreelance.Models.Project

@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="~/css/project/detail.css" />


<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Project" asp-action="Index">Dự án</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    @if (ViewBag.InactiveMessage != null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.InactiveMessage
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi!</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="project-title">
                @if (Model.IsHighlighted)
                {
                    <span class="badge bg-warning me-2"><i class="fas fa-star me-1"></i>Nổi bật</span>
                }
                @if (!Model.IsActive)
                {
                    <span class="badge bg-danger me-2"><i class="fas fa-eye-slash me-1"></i>Đã ẩn</span>
                }
                @if (Model.IsFlagged)
                {
                    <span class="badge bg-danger me-2" title="@Model.FlagReason">
                        <i class="fas fa-flag me-1"></i> Đã báo cáo
                    </span>
                }
                @Model.Title
            </h1>
            <div class="d-flex flex-wrap mb-3 gap-2">
                <span class="badge bg-primary"><i class="fas fa-folder me-1"></i>@Model.Category.CategoryName</span>
                <span class="badge @(Model.StatusID == 1 ? "bg-success" : Model.StatusID == 2 ? "bg-warning" : "bg-danger")">
                    <i class="fas @(Model.StatusID == 1 ? "fa-check-circle" : Model.StatusID == 2 ? "fa-clock" : "fa-times-circle") me-1"></i>@Model.Status.StatusName
                </span>
                <span class="badge bg-info"><i class="fas fa-tag me-1"></i>@Model.Type.TypeName</span>
                @if (Model.IsRemoteWork)
                {
                    <span class="badge bg-secondary"><i class="fas fa-home me-1"></i>Làm việc từ xa</span>
                }
            </div>
            <div class="project-meta">
                <div><i class="fas fa-calendar-alt"></i> Đăng: @Model.CreatedAt.ToString("dd/MM/yyyy")</div>
                <div><i class="fas fa-calendar-day"></i> Hạn chót: @Model.Deadline.ToString("dd/MM/yyyy")</div>
                <div><i class="fas fa-money-bill-wave"></i> Ngân sách: @Model.Budget.ToString("N0")đ</div>
            </div>
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator") || User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.BusinessID.ToString())
            {
                <div class="mt-3 mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-wallet text-success me-2"></i> Ví dự án: 
                        <span class="badge bg-success ms-2 fs-6">@Model.ProjectWallet.ToString("N0")đ</span>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4 text-end mt-md-0 mt-3">
            @if (User.Identity != null && User.Identity.IsAuthenticated &&
            (User.IsInRole("Admin") || User.IsInRole("Moderator") ||
            User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model.BusinessID.ToString()))
            {
                <div class="btn-group d-flex flex-wrap justify-content-end">
                    <a asp-action="Edit" asp-route-id="@Model.ProjectID" class="btn btn-rect" title="Chỉnh sửa dự án">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-controller="Application" asp-action="ProjectApplications" asp-route-projectId="@Model.ProjectID"
                       class="btn btn-rect btn-rect-primary" title="Xem ứng viên (@Model.StudentApplications.Count)">
                        <i class="fas fa-users"></i>
                    </a>
                    <a asp-controller="Project" asp-action="InviteStudents" asp-route-projectId="@Model.ProjectID"
                       class="btn btn-rect btn-rect-info" title="Mời sinh viên">
                        <i class="fas fa-user-plus"></i>
                    </a>
                    
                    @if (Model.StatusID != 3 && Model.StatusID != 4) // Nếu dự án chưa hoàn thành và chưa bị hủy
                    {
                        <form asp-controller="Project" asp-action="CompleteProject" method="post" id="completeProjectForm" class="btn-form">
                            <input type="hidden" name="id" value="@Model.ProjectID" />
                            <button type="button" id="completeProjectBtn" class="btn btn-rect btn-rect-success" title="Đánh dấu dự án đã hoàn thành">
                                <i class="fas fa-check-circle"></i>
                            </button>
                        </form>
                    }

                    @if (Model.StatusID != 3 && Model.StatusID != 4) // Nếu dự án chưa hoàn thành và chưa bị hủy
                    {
                        <form asp-controller="Project" asp-action="CancelProject" method="post" id="cancelProjectForm" class="btn-form">
                            <input type="hidden" name="id" value="@Model.ProjectID" />
                            <button type="button" id="cancelProjectBtn" class="btn btn-rect btn-rect-danger" title="Hủy dự án">
                                <i class="fas fa-times-circle"></i>
                            </button>
                        </form>
                    }
                    
                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                    {
                        @if (!Model.IsFlagged)
                        {
                            <a asp-action="FlagProject" asp-route-id="@Model.ProjectID" class="btn btn-rect btn-rect-danger" title="Báo cáo dự án">
                                <i class="fas fa-flag"></i>
                            </a>
                        }
                        else
                        {
                            <form asp-action="UnflagProject" method="post" class="btn-form">
                                <input type="hidden" name="id" value="@Model.ProjectID" />
                                <button type="submit" class="btn btn-rect btn-rect-warning" title="Gỡ cờ báo cáo">
                                    <i class="fas fa-flag-checkered"></i>
                                </button>
                            </form>
                        }
                    }

                    <a asp-action="Delete" asp-route-id="@Model.ProjectID" class="btn btn-rect btn-rect-danger" title="Xóa dự án">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            }
            else if (User.Identity != null && User.Identity.IsAuthenticated &&
            User.FindFirst(ClaimTypes.NameIdentifier)?.Value != Model.BusinessID.ToString())
            {
                @if (User.IsInRole("Student"))
                {
                    var currentUserId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));
                    var hasApplied = Model.StudentApplications?.Any(a => a.UserID == currentUserId) ?? false;
                    
                    if (!hasApplied && Model.StatusID != 3 && Model.StatusID != 4) // Chỉ hiển thị nút nếu sinh viên chưa ứng tuyển và dự án chưa hoàn thành/hủy
                    {
                        <a asp-controller="Application" asp-action="Apply" asp-route-projectId="@Model.ProjectID"
                           class="btn btn-apply">
                            <i class="fas fa-paper-plane me-2"></i> Ứng tuyển vào dự án
                        </a>
                    }
                    else if (hasApplied)
                    {
                        var application = Model.StudentApplications.FirstOrDefault(a => a.UserID == currentUserId);
                        <a asp-controller="Application" asp-action="ViewApplication" asp-route-id="@application.ApplicationID" 
                           class="btn btn-info">
                            <i class="fas fa-eye me-2"></i> Xem đơn ứng tuyển
                        </a>
                    }
                }
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Mô tả dự án -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-align-left"></i> Mô tả dự án</h5>
                </div>
                <div class="card-body">
                    <div class="formatted-content">
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>

            <!-- Kỹ năng yêu cầu -->
            @if (Model.ProjectSkillsRequired.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-code"></i> Kỹ năng yêu cầu</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var skill in Model.ProjectSkillsRequired)
                            {
                                <span class="badge skill-badge">@skill.Skill.SkillName</span>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Tập tin đính kèm -->
            @if (Model.ProjectAttachments.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-paperclip"></i> Tập tin đính kèm</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var attachment in Model.ProjectAttachments)
                            {
                                <a href="@attachment.FilePath" class="list-group-item list-group-item-action" download>
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@attachment.FileName</h6>
                                        <small>@(attachment.FileSize / 1024) KB</small>
                                    </div>
                                    <small class="text-muted">Uploaded @attachment.UploadedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <!-- Thông tin doanh nghiệp -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-building"></i> Thông tin doanh nghiệp</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar me-3">
                            @if (!string.IsNullOrEmpty(Model.Business.Avatar))
                            {
                                <img src="@Url.Content($"{Model.Business.Avatar}")"
                                     alt="Avatar"
                                     class="img-fluid rounded-circle avatar-img" />
                            }
                            else
                            {
                                <div class="avatar-placeholder">
                                    @(Model.Business.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                </div>
                            }
                        </div>

                        <div>
                            <h6 class="mb-0">@Model.Business.FullName</h6>
                            <small class="text-muted">Thành viên từ @(Model.Business.CreatedAt.ToString("MM/yyyy"))</small>
                        </div>
                    </div>

                    @if (Model.Address != null)
                    {
                        <div class="mb-2">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                            @Model.Address.DetailAddress, @Model.Address.WardName,
                            @Model.Address.DistrictName, @Model.Address.ProvinceName
                        </div>
                    }

                    <div class="mt-3">
                        <div class="d-flex justify-content-between gap-2 flex-wrap mt-3">
                            <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.BusinessID"
                               class="btn btn-view-profile flex-fill">
                                <i class="fas fa-user"></i> Xem hồ sơ
                            </a>

                            <form asp-controller="Chat" asp-action="StartProjectChat" method="post" class="flex-fill">
                                <input type="hidden" name="projectId" value="@Model.ProjectID" />
                                <button type="submit" class="btn btn-apply w-100">
                                    <i class="fas fa-comment"></i> Nhắn tin với chủ dự án
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Chi tiết dự án -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Chi tiết dự án</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-calendar-day text-primary me-2"></i>Ngày bắt đầu</span>
                            <span class="badge bg-light text-dark">@Model.StartDate.ToString("dd/MM/yyyy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-calendar-check text-primary me-2"></i>Ngày kết thúc</span>
                            <span class="badge bg-light text-dark">@Model.EndDate.ToString("dd/MM/yyyy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-hourglass-half text-primary me-2"></i>Thời gian</span>
                            <span class="badge bg-light text-dark">@((Model.EndDate - Model.StartDate).Days) ngày</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-users text-primary me-2"></i>Số lượng ứng viên</span>
                            <span class="badge bg-primary rounded-pill">@Model.StudentApplications.Count</span>
                        </li>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
@if (User.Identity.IsAuthenticated)
{
    var currentUserId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));
    var isOwner = Model.BusinessID == currentUserId;
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("Moderator");
    var isStudent = User.IsInRole("Student");

    @if (isOwner || isAdmin)
    {
        @if (Model.StudentApplications != null && Model.StudentApplications.Any(a =>
            a.Status == "InProgress" || a.Status == "PendingReview" || a.Status == "Completed"))
        {
            <div class="container-fluid px-0">
                <div class="project-management-container">
                    <div class="card mb-3 animate__animated animate__fadeIn">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-clipboard-check"></i> Kết quả dự án</h5>
                        </div>
                        <div class="card-body">
                            <p>Xem kết quả dự án được nộp bởi sinh viên đã được chấp nhận:</p>
                            <div class="list-group">
                                @foreach (var app in Model.StudentApplications.Where(a =>
                                    a.Status == "InProgress" || a.Status == "PendingReview" || a.Status == "Completed"))
                                {
                                    <div class="list-group-item d-flex flex-column w-100">
                                        <div class="d-flex justify-content-between align-items-center w-100">
                                            <div class="d-flex align-items-center gap-2">
                                                <strong>@app.User.FullName</strong>
                                                <span class="badge @(app.Status == "Completed" ? "bg-success" : app.Status == "PendingReview" ? "bg-warning" : "bg-primary")">
                                                    @app.Status
                                                </span>
                                                
                                                @if ((app.Status == "PendingReview" || app.Status == "InProgress" || app.Status == "Completed") &&
                                                    (Model.StatusID == 1 || Model.StatusID == 2))
                                                {
                                                    @if (app.BusinessConfirmedCompletion && !app.StudentConfirmedCompletion)
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-info-circle"></i> Đang chờ sinh viên xác nhận
                                                        </span>
                                                    }
                                                    else if (app.BusinessConfirmedCompletion && app.StudentConfirmedCompletion)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle"></i> Đã hoàn thành
                                                        </span>
                                                        
                                                        @if (app.IsPaid)
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check-circle"></i> Đã thanh toán
                                                            </span>
                                                        }
                                                    }
                                                }
                                            </div>
                                            <div class="d-flex gap-2">
                                                <a href="@Url.Action("ProjectSubmissions", "ProjectSubmission", new { applicationId = app.ApplicationID })"
                                                   class="btn btn-sm btn-primary">Xem kết quả</a>
                                                   
                                                @if ((app.Status == "PendingReview" || app.Status == "InProgress" || app.Status == "Completed") &&
                                                    (Model.StatusID == 1 || Model.StatusID == 2))
                                                {
                                                    @if (!app.BusinessConfirmedCompletion)
                                                    {
                                                        <form asp-controller="Project" asp-action="ConfirmCompletion" method="post" style="margin:0; padding:0; display:inline;">
                                                            <input type="hidden" name="projectId" value="@Model.ProjectID" />
                                                            <input type="hidden" name="applicationId" value="@app.ApplicationID" />
                                                            <button type="submit" class="btn btn-success btn-sm">
                                                                <i class="fas fa-check-circle"></i> Xác nhận hoàn thành
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-controller="Project" asp-action="CancelConfirmation" method="post" style="margin:0; padding:0; display:inline;">
                                                            <input type="hidden" name="projectId" value="@Model.ProjectID" />
                                                            <input type="hidden" name="applicationId" value="@app.ApplicationID" />
                                                            <button type="submit" class="btn btn-warning btn-sm">
                                                                <i class="fas fa-times-circle"></i> Huỷ xác nhận
                                                            </button>
                                                        </form>
                                                        
                                                        @if (app.BusinessConfirmedCompletion && app.StudentConfirmedCompletion && !app.IsPaid)
                                                        {
                                                            <a asp-controller="ProjectSubmission" asp-action="Finalize" asp-route-applicationId="@app.ApplicationID" class="btn btn-primary btn-sm">
                                                                <i class="fas fa-money-bill-wave"></i> Thanh toán
                                                            </a>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    if (isStudent)
    {
        var hasApplied = Model.StudentApplications?.Any(a => a.UserID == currentUserId) ?? false;

        if (hasApplied)
        {
            var application = Model.StudentApplications.FirstOrDefault(a => a.UserID == currentUserId);

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Bạn đã ứng tuyển vào dự án này.
                <a asp-controller="Application" asp-action="ViewApplication" asp-route-id="@application.ApplicationID" class="alert-link">
                    Xem đơn ứng tuyển
                </a>
            </div>

            <div class="d-flex flex-wrap gap-2 mb-3">
                @if (application.Status == "Accepted" || application.Status == "InProgress")
                {
                    <a asp-controller="ProjectSubmission" asp-action="Create" asp-route-applicationId="@application.ApplicationID"
                       class="btn btn-success">
                        <i class="fas fa-upload"></i> Nộp kết quả dự án
                    </a>
                }

                @if (application.Status == "Accepted" || application.Status == "InProgress" ||
                     application.Status == "PendingReview" || application.Status == "Completed")
                {
                    <a asp-controller="ProjectSubmission" asp-action="MySubmissions" asp-route-applicationId="@application.ApplicationID"
                       class="btn btn-info">
                        <i class="fas fa-list-check"></i> Xem kết quả đã nộp
                    </a>

                    @if ((application.Status == "PendingReview" || application.Status == "InProgress" || application.Status == "Completed") &&
                         !application.StudentConfirmedCompletion && (Model.StatusID == 1 || Model.StatusID == 2))
                    {
                        <form asp-controller="Project" asp-action="ConfirmCompletion" method="post" style="margin:0; padding:0; display:inline;">
                            <input type="hidden" name="projectId" value="@Model.ProjectID" />
                            <input type="hidden" name="applicationId" value="@application.ApplicationID" />
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check-circle"></i> Xác nhận hoàn thành
                            </button>
                        </form>
                    }
                    else if (application.StudentConfirmedCompletion && (Model.StatusID == 1 || Model.StatusID == 2))
                    {
                        <form asp-controller="Project" asp-action="CancelConfirmation" method="post" style="margin:0; padding:0; display:inline;">
                            <input type="hidden" name="projectId" value="@Model.ProjectID" />
                            <input type="hidden" name="applicationId" value="@application.ApplicationID" />
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-times-circle"></i> Huỷ xác nhận
                            </button>
                        </form>
                    }
                }
            </div>

            @if ((application.Status == "PendingReview" || application.Status == "InProgress" || application.Status == "Completed") &&
                 application.StudentConfirmedCompletion && (Model.StatusID == 1 || Model.StatusID == 2))
            {
                @if (!application.BusinessConfirmedCompletion)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Bạn đã xác nhận hoàn thành. Đang chờ xác nhận từ doanh nghiệp.
                    </div>
                }
                else if (application.BusinessConfirmedCompletion)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> Dự án đã hoàn thành. Cả hai bên đã xác nhận.
                    </div>
                }
            }
        }
    }
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Bạn cần
        <a asp-controller="Account" asp-action="Login" class="alert-link">đăng nhập</a> để ứng tuyển vào dự án này.
    </div>
}
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script>
        $(document).ready(function() {
            // Thiết lập animation cho các card
            $('.card').addClass('animate__animated animate__fadeIn');
            
            // Điều chỉnh vị trí modal để không bị che bởi thanh header
            $('.modal').on('show.bs.modal', function () {
                setTimeout(function() {
                    $('.modal-dialog').css({
                        'margin-top': '80px'
                    });
                }, 100);
            });
            
            // Xử lý nút hoàn thành dự án
            $("#completeProjectBtn").click(function() {
                // Hiển thị modal xác nhận hoàn thành dự án
                $("#completeProjectModal").modal("show");
            });
            
            // Xử lý nút xác nhận trong modal hoàn thành
            $("#confirmCompleteBtn").click(function() {
                // Hiển thị hiệu ứng loading
                $(this).html('<i class="fas fa-spinner fa-spin me-2"></i> Đang xử lý...');
                $(this).prop('disabled', true);
                
                // Gửi form hoàn thành dự án
                $("#completeProjectForm").submit();
            });
            
            // Xử lý nút hủy dự án
            $("#cancelProjectBtn").click(function() {
                // Hiển thị modal xác nhận hủy dự án
                $("#cancelProjectModal").modal("show");
            });
            
            // Xử lý nút xác nhận trong modal hủy
            $("#confirmCancelBtn").click(function() {
                // Hiển thị hiệu ứng loading
                $(this).html('<i class="fas fa-spinner fa-spin me-2"></i> Đang xử lý...');
                $(this).prop('disabled', true);
                
                // Gửi form hủy dự án
                $("#cancelProjectForm").submit();
            });
            
            // Hiệu ứng hover cho các nút
            $(".btn").hover(function() {
                $(this).css("transform", "translateY(-3px)");
            }, function() {
                $(this).css("transform", "translateY(0)");
            });
        });
    </script>
}

