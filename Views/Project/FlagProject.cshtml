@model StudentFreelance.Models.Project

@{
    ViewData["Title"] = "Báo cáo dự án";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Báo cáo dự án</h1>
        </div>
        <div class="col-md-4 text-right">
            <a asp-action="Details" asp-route-id="@Model.ProjectID" class="btn btn-secondary">Quay lại dự án</a>
        </div>
    </div>

    <div class="alert alert-warning mt-3">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Cảnh báo:</strong> Việc báo cáo dự án sẽ đánh dấu dự án này là đáng ngờ hoặc gian lận.
        Hành động này sẽ được ghi lại và chủ dự án sẽ nhận được thông báo.
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Thông tin dự án</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Doanh nghiệp:</dt>
                        <dd class="col-sm-8">@Model.Business.FullName</dd>

                        <dt class="col-sm-4">Nhóm nghề:</dt>
                        <dd class="col-sm-8">@Model.Category.CategoryName</dd>

                        <dt class="col-sm-4">Ngân sách:</dt>
                        <dd class="col-sm-8">@Model.Budget.ToString("N0") VND</dd>

                        <dt class="col-sm-4">Ngày đăng:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Báo cáo dự án</h5>
                </div>
                <div class="card-body">
                    <form asp-action="FlagProject" method="post">
                        <input type="hidden" name="id" value="@Model.ProjectID" />

                        <div class="form-group">
                            <label for="reason">Lý do báo cáo:</label>
                            <textarea name="reason" id="reason" class="form-control" rows="5" required></textarea>
                            <small class="form-text text-muted">
                                Vui lòng giải thích chi tiết lý do vì sao bạn muốn báo cáo dự án này.
                            </small>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-flag"></i> Báo cáo dự án
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.ProjectID" class="btn btn-outline-secondary">
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
