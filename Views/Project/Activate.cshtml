@model StudentFreelance.Models.Project

@{
    ViewData["Title"] = "Kích hoạt Dự án";
}

<div class="container mt-4">
    <h1>Kích hoạt Dự án</h1>

    <div class="alert alert-warning">
        <h4>Bạn có chắc chắn muốn kích hoạt dự án này không?</h4>
        <p>Thao tác này sẽ làm cho dự án hiển thị lại với tất cả người dùng.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Chi tiết Dự án</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <strong>Tiêu đề:</strong>
                <p>@Model.Title</p>
            </div>
            <div class="mb-3">
                <strong>Danh mục:</strong>
                <p>@Model.Category.CategoryName</p>
            </div>
            <div class="mb-3">
                <strong>Ngân sách:</strong>
                <p>@Model.Budget.ToString("N0") VND</p>
            </div>
            <div class="mb-3">
                <strong>Trạng thái:</strong>
                <p>@Model.Status.StatusName</p>
            </div>
        </div>
    </div>

    <form asp-action="Activate" method="post">
        <input type="hidden" asp-for="ProjectID" />
        <div class="d-flex">
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-check-circle"></i> Kích hoạt dự án
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
        </div>
    </form>
</div>