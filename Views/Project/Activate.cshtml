@model StudentFreelance.Models.Project

@{
    ViewData["Title"] = "Activate Project";
}

<div class="container mt-4">
    <h1>Activate Project</h1>
    
    <div class="alert alert-warning">
        <h4>Are you sure you want to activate this project?</h4>
        <p>This will make the project visible to all users again.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Project Details</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <strong>Title:</strong>
                <p>@Model.Title</p>
            </div>
            <div class="mb-3">
                <strong>Category:</strong>
                <p>@Model.Category.CategoryName</p>
            </div>
            <div class="mb-3">
                <strong>Budget:</strong>
                <p>@Model.Budget.ToString("N0") VND</p>
            </div>
            <div class="mb-3">
                <strong>Status:</strong>
                <p>@Model.Status.StatusName</p>
            </div>
        </div>
    </div>
    
    <form asp-action="Activate" method="post">
        <input type="hidden" asp-for="ProjectID" />
        <div class="d-flex">
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-check-circle"></i> Activate Project
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div> 