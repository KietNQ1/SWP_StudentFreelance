@model StudentFreelance.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <a asp-action="Edit" class="btn btn-light">
                        <i class="bi bi-pencil"></i> Chỉnh sửa
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="mb-4">
                                @if (!string.IsNullOrEmpty(Model.AvatarPath))
                                {
                                    <img src="@Model.AvatarPath" class="img-fluid rounded-circle" style="width:200px;height:200px;object-fit:cover;" />
                                }
                                else
                                {
                                    <img src="/image/default-avatar.png" class="img-fluid rounded-circle" style="width:200px;height:200px;object-fit:cover;" />
                                }
                            </div>
                            <h4>@Model.FullName</h4>
                            <p class="text-muted"><i class="bi bi-envelope"></i> @Model.Email</p>
                            <div class="mt-3">
                                <p><i class="bi bi-calendar"></i> Thành viên từ: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                                <p><i class="bi bi-clock"></i> Cập nhật lần cuối: @Model.UpdatedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Thông tin cơ bản</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Họ tên:</div>
                                        <div class="col-md-8">@Model.FullName</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Số điện thoại:</div>
                                        <div class="col-md-8">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Trường đại học:</div>
                                        <div class="col-md-8">@(string.IsNullOrEmpty(Model.University) ? "Chưa cập nhật" : Model.University)</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Ngành học:</div>
                                        <div class="col-md-8">@(string.IsNullOrEmpty(Model.Major) ? "Chưa cập nhật" : Model.Major)</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Công ty:</div>
                                        <div class="col-md-8">@(string.IsNullOrEmpty(Model.CompanyName) ? "Chưa cập nhật" : Model.CompanyName)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 fw-bold">Lĩnh vực:</div>
                                        <div class="col-md-8">@(string.IsNullOrEmpty(Model.Industry) ? "Chưa cập nhật" : Model.Industry)</div>
                                    </div>
                                </div>
                            </div>

                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Địa chỉ</h5>
                                </div>
                                <div class="card-body">
                                    @if (string.IsNullOrEmpty(Model.FullAddress) && Model.ProvinceID == null)
                                    {
                                        <p class="text-muted">Chưa cập nhật địa chỉ</p>
                                    }
                                    else
                                    {
                                        <p>
                                            @(string.IsNullOrEmpty(Model.DetailAddress) ? "" : Model.DetailAddress)
                                            @(string.IsNullOrEmpty(Model.WardName) ? "" : ", " + Model.WardName)
                                            @(string.IsNullOrEmpty(Model.DistrictName) ? "" : ", " + Model.DistrictName)
                                            @(string.IsNullOrEmpty(Model.ProvinceName) ? "" : ", " + Model.ProvinceName)
                                        </p>
                                    }
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Kỹ năng</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Skills == null || !Model.Skills.Any())
                                    {
                                        <p class="text-muted">Chưa cập nhật kỹ năng</p>
                                    }
                                    else
                                    {
                                        <div class="row">
                                            @foreach (var skill in Model.Skills)
                                            {
                                                <div class="col-md-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-primary me-2">@skill.SkillName</span>
                                                        <span class="badge bg-secondary">@skill.ProficiencyLevelName</span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a asp-action="Edit" class="btn btn-primary btn-lg">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin cá nhân
                </a>
            </div>
        </div>
    </div>
</div>