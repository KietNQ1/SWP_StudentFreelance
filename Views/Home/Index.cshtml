<!-- Hero Section -->
<section class="hero">
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">
                Let top talent bring <br />
                your ideas to life
            </h1>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input
                        type="text"
                        placeholder="Search for any service..."
                        class="search-input"
                    />
                    <button class="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <!-- Popular Searches -->
            <div class="popular-searches">
                <button class="tag">website development</button>
                <button class="tag">architecture & interior design</button>
                <button class="tag">UGC videos</button>
                <button class="tag">video editing</button>
            </div>

            <!-- Trusted By -->
            <div class="trusted-by">
