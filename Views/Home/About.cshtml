@{
    ViewData["Title"] = "About Us - STJobs";
}

<div class="about-container">
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold">Welcome to STJobs</h1>
                    <p class="lead">Connecting talented students with businesses for short-term projects and freelance opportunities.</p>
                </div>
                <div class="col-lg-6">
                    <img src="~/images/about/hero-image.jpg" alt="STJobs Team" class="img-fluid rounded shadow" onerror="this.src='https://via.placeholder.com/600x400?text=STJobs'">
                </div>
            </div>
        </div>
    </section>

    <section class="mission-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="section-title">Our Mission</h2>
                    <p class="section-description">
                        At STJobs, we're on a mission to bridge the gap between talented students seeking real-world experience 
                        and businesses looking for fresh perspectives and innovative solutions. We believe in creating 
                        opportunities that benefit both students and businesses in a collaborative ecosystem.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="values-section py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center mb-5">Our Core Values</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="value-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="value-icon mb-3">
                            <i class="fas fa-handshake fa-3x text-primary"></i>
                        </div>
                        <h3>Trust & Integrity</h3>
                        <p>We foster a transparent platform where all parties can engage with confidence and security.</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="value-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="value-icon mb-3">
                            <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                        </div>
                        <h3>Growth & Learning</h3>
                        <p>We believe in continuous improvement and creating opportunities for students to develop real-world skills.</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="value-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="value-icon mb-3">
                            <i class="fas fa-lightbulb fa-3x text-primary"></i>
                        </div>
                        <h3>Innovation</h3>
                        <p>We encourage creative solutions and fresh perspectives that drive value for all stakeholders.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="how-it-works py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">How STJobs Works</h2>
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="step-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="step-number mb-3">1</div>
                        <h3>For Students</h3>
                        <p>Create a profile showcasing your skills, experience, and portfolio. Browse available projects and apply to those matching your expertise.</p>
                    </div>
                </div>
                <div class="col-lg-4 mb-4">
                    <div class="step-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="step-number mb-3">2</div>
                        <h3>For Businesses</h3>
                        <p>Post projects with clear requirements, timelines, and budgets. Review student applications and select the best fit for your needs.</p>
                    </div>
                </div>
                <div class="col-lg-4 mb-4">
                    <div class="step-card text-center p-4 h-100 shadow-sm rounded">
                        <div class="step-number mb-3">3</div>
                        <h3>Collaboration</h3>
                        <p>Work together through our secure platform with integrated messaging, file sharing, and payment protection for both parties.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="team-section py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center mb-5">Our Team</h2>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="team-member text-center">
                        <img src="~/images/about/team-1.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" onerror="this.src='https://via.placeholder.com/200x200?text=Team+Member'">
                        <h4>Nguyễn Văn A</h4>
                        <p class="text-muted">Founder & CEO</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="team-member text-center">
                        <img src="~/images/about/team-2.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" onerror="this.src='https://via.placeholder.com/200x200?text=Team+Member'">
                        <h4>Trần Thị B</h4>
                        <p class="text-muted">CTO</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="team-member text-center">
                        <img src="~/images/about/team-3.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" onerror="this.src='https://via.placeholder.com/200x200?text=Team+Member'">
                        <h4>Lê Văn C</h4>
                        <p class="text-muted">Head of Operations</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="team-member text-center">
                        <img src="~/images/about/team-4.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" onerror="this.src='https://via.placeholder.com/200x200?text=Team+Member'">
                        <h4>Phạm Thị D</h4>
                        <p class="text-muted">Marketing Director</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="stats-section py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 mb-4">
                    <div class="stat-card p-4 h-100 shadow-sm rounded">
                        <h2 class="display-4 fw-bold text-primary">5000+</h2>
                        <p class="text-muted">Students Registered</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-card p-4 h-100 shadow-sm rounded">
                        <h2 class="display-4 fw-bold text-primary">1000+</h2>
                        <p class="text-muted">Businesses</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-card p-4 h-100 shadow-sm rounded">
                        <h2 class="display-4 fw-bold text-primary">3500+</h2>
                        <p class="text-muted">Projects Completed</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-card p-4 h-100 shadow-sm rounded">
                        <h2 class="display-4 fw-bold text-primary">98%</h2>
                        <p class="text-muted">Satisfaction Rate</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contact-section py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="section-title">Get In Touch</h2>
                    <p class="section-description mb-5">
                        Have questions about STJobs? We'd love to hear from you!
                    </p>
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="contact-item">
                                <i class="fas fa-envelope fa-2x text-primary mb-3"></i>
                                <h4>Email</h4>
                                <p>contact@stjobs.com</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="contact-item">
                                <i class="fas fa-phone fa-2x text-primary mb-3"></i>
                                <h4>Phone</h4>
                                <p>+84 123 456 789</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="contact-item">
                                <i class="fas fa-map-marker-alt fa-2x text-primary mb-3"></i>
                                <h4>Address</h4>
                                <p>FPT University, Ho Chi Minh City, Vietnam</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .about-container {
        font-family: 'Inter', sans-serif;
    }
    
    .hero-section {
        padding: 80px 0;
        background-color: #f8f9fa;
    }
    
    .section-title {
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #333;
    }
    
    .section-description {
        font-size: 1.1rem;
        color: #666;
        line-height: 1.8;
    }
    
    .value-card, .step-card, .stat-card {
        background-color: #fff;
        transition: all 0.3s ease;
    }
    
    .value-card:hover, .step-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    .step-number {
        display: inline-block;
        width: 50px;
        height: 50px;
        line-height: 50px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
    }
    
    .team-member img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .contact-item {
        padding: 20px;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        height: 100%;
    }
</style> 