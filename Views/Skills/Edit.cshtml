@model StudentFreelance.Models.Skill

@{
    ViewData["Title"] = "Chỉnh sửa kỹ năng";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.SkillID)

    <div class="form-group">
        @Html.LabelFor(model => model.SkillName)
        @Html.TextBoxFor(model => model.SkillName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryID, "Thể loại")
        @Html.DropDownListFor(model => model.CategoryID, ViewData["CategoryID"] as SelectList, "-- Chọn danh mục --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-check">
        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
        @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
}
