@model StudentFreelance.Models.Skill

@{
    ViewData["Title"] = "Chỉnh sửa kỹ năng";
    ViewData["HeaderIcon"] = "edit";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<link rel="stylesheet" href="~/css/skills/edit.css" />

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Chỉnh sửa thông tin kỹ năng</h5>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.SkillID)

                    <div class="row mb-3">
                        <label asp-for="SkillName" class="col-sm-4 col-form-label fw-bold text-end">Tên kỹ năng</label>
                        <div class="col-sm-8">
                            <input asp-for="SkillName" class="form-control" />
                            <span asp-validation-for="SkillName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="CategoryID" class="col-sm-4 col-form-label fw-bold text-end">Danh mục</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.CategoryID, ViewBag.CategoryID as SelectList, "-- Chọn danh mục --", new { @class = "form-select" })
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Hiển thị kỹ năng</label>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay về
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
