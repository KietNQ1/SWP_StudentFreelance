<link rel="stylesheet" href="~/css/skills.css" asp-append-version="true" />

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Tên kỹ năng</th>
            <th>Danh mục con</th>
            <th>Danh mục cha</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <th>Trạng thái</th>
                <th>Hành động</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            string rowClass = skill.IsActive ? "" : "text-muted";
            <tr class="@rowClass">
                <td>@skill.SkillName</td>
                <td>@skill.SubCategoryName</td>
                <td>@(skill.ParentCategoryName ?? "-")</td>

                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                {
                    <td>@(skill.IsActive ? "Hoạt động" : "Không hoạt động")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@skill.SkillID">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@skill.SkillID">Chi tiết</a> |
                        @if (skill.IsActive)
                        {
                            <a asp-action="Delete" asp-route-id="@skill.SkillID">Ẩn</a>
                        }
                        else
                        {
                            <a asp-action="Unhide" asp-route-id="@skill.SkillID">Hiện</a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
