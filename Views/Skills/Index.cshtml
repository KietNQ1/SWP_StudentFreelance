@model List<StudentFreelance.Models.Skill>
@{
    ViewData["Title"] = "Danh sách kỹ năng";
    ViewData["HeaderIcon"] = "code";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
﻿
<link rel="stylesheet" href="~/css/skills/index.css" asp-append-version="true" />

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Quản lý kỹ năng</h5>
        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
        {
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo mới</a>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>Tên kỹ năng</th>
                        <th>Loại kỹ năng</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var skill in Model)
                    {
                        string rowClass = skill.IsActive ? "" : "text-muted"; // Màu mờ cho kỹ năng ẩn
                        <tr class="@rowClass">
                            <td>@skill.SkillName</td>
                            <td>@skill.Category?.CategoryName</td>

                            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                            {
                                <td>
                                    <span class="badge @(skill.IsActive ? "bg-success" : "bg-danger")">
                                        @(skill.IsActive ? "Đang hiển thị" : "Đã ẩn")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@skill.SkillID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@skill.SkillID" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (skill.IsActive)
                                        {
                                            <a asp-action="Delete" asp-route-id="@skill.SkillID" class="btn btn-sm btn-danger">
                                                <i class="fas fa-eye-slash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Unhide" asp-route-id="@skill.SkillID" class="btn btn-sm btn-success">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
