@model List<StudentFreelance.Models.Skill>
﻿
<link rel="stylesheet" href="~/css/skills/index.css" asp-append-version="true" />

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Skill Name</th>
            <th>Type</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <th>Status</th>
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            string rowClass = skill.IsActive ? "" : "text-muted"; // Màu mờ cho kỹ năng ẩn
            <tr class="@rowClass">
                <td>@skill.SkillName</td>
                <td>@skill.Category?.CategoryName</td>

                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                {
                    <td>@(skill.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@skill.SkillID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@skill.SkillID">Details</a> |
                        @if (skill.IsActive)
                        {
                            <a asp-action="Delete" asp-route-id="@skill.SkillID">Hide</a>
                        }
                        else
                        {
                            <a asp-action="Unhide" asp-route-id="@skill.SkillID">Unhide</a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
