@model StudentFreelance.Models.Skill
@{
    ViewData["Title"] = "Skill Details";
}

<link rel="stylesheet" href="~/css/skills/details.css" />

<div class="skill-details-container">
    <div class="header-section">
        <h2>@ViewData["Title"]</h2>
        <span class="details-icon">📋</span>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Skill ID</dt>
                <dd class="col-sm-9">@Model.SkillID</dd>
                <dt class="col-sm-3">Skill Name</dt>
                <dd class="col-sm-9">@Model.SkillName</dd>
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.CategoryName</dd>
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Hidden</span>
                    }
                </dd>
            </dl>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.SkillID" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>