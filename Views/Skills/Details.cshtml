@model StudentFreelance.Models.Skill
@{
    ViewData["Title"] = "Chi tiết kỹ năng";
    ViewData["HeaderIcon"] = "code-branch";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<link rel="stylesheet" href="~/css/skills/details.css" />

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Chi tiết kỹ năng</h5>
        <div>
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <a asp-action="Edit" asp-route-id="@Model.SkillID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <table class="table table-bordered">
                    <tr>
                        <th style="width: 30%">ID Kỹ năng</th>
                        <td>@Model.SkillID</td>
                    </tr>
                    <tr>
                        <th>Tên kỹ năng</th>
                        <td>@Model.SkillName</td>
                    </tr>
                    <tr>
                        <th>Danh mục</th>
                        <td>@Model.Category?.CategoryName</td>
                    </tr>
                    <tr>
                        <th>Trạng thái</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã bị ẩn</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>