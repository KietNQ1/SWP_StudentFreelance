@model StudentFreelance.ViewModels.ProjectSubmissionFeedbackViewModel

@{
    ViewData["Title"] = "Phản hồi kết quả dự án";
}

<link rel="stylesheet" href="~/css/project/feedback.css" />

<div class="feedback-container">
    <h2 class="feedback-title">Phản hồi kết quả dự án</h2>
    <hr />

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Nhập phản hồi</h5>
        </div>
        <div class="card-body">
            <form asp-action="Feedback" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="SubmissionID" />

                <div class="form-group mb-4">
                    <label asp-for="Feedback" class="control-label"></label>
                    <textarea asp-for="Feedback" class="form-control" rows="6" placeholder="Nhập phản hồi của bạn về kết quả dự án này..."></textarea>
                    <span asp-validation-for="Feedback" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="form-check">
                        <input asp-for="IsApproved" class="form-check-input" />
                        <label asp-for="IsApproved" class="form-check-label"></label>
                    </div>
                    <small class="form-text text-muted">
                        Nếu bạn chấp nhận kết quả, dự án sẽ được đánh dấu là hoàn thành.<br />
                        Nếu bạn từ chối, sinh viên sẽ cần nộp lại kết quả.
                    </small>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
                    <a asp-action="Details" asp-route-id="@Model.SubmissionID" class="btn btn-secondary me-2">Quay lại</a>
                    <a asp-controller="Project" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn btn-info">Quay lại trang dự án</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 