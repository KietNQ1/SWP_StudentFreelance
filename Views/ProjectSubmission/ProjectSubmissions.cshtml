@model StudentFreelance.ViewModels.ProjectSubmissionListViewModel

@{
    ViewData["Title"] = "Kết quả dự án đã nộp";
    var isProjectCompleted = Model.ApplicationStatus == "Completed";
    var canRateStudent = ViewBag.CanRateStudent == true;
}

<div class="container mt-4">
    <h2>Kết quả dự án đã nộp</h2>
    <hr />

    <!-- Thông tin dự án -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thông tin dự án</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Tên dự án:</strong> @Model.ProjectTitle</p>
                    <p><strong>Sinh viên:</strong> @Model.StudentName</p>
                </div>
                <div class="col-md-6">
                    <p>
                        <strong>Trạng thái đơn ứng tuyển:</strong>
                        <span class="badge @(Model.ApplicationStatus == "Completed" ? "bg-success" :
                                             Model.ApplicationStatus == "Rejected" ? "bg-danger" : "bg-primary")">
                            @Model.ApplicationStatus
                        </span>
                    </p>
                </div>
            </div>
            @if (Model.ApplicationStatus == "Completed" && Model.HasBothConfirmed && !Model.IsPaid && !Model.Submissions.Any(s => s.Status != "Approved"))
            {
                <div class="mt-3">
                    <a asp-action="Finalize" asp-route-applicationId="@Model.ApplicationID" class="btn btn-success">Thanh toán cho sinh viên</a>
                </div>
            }
            @if (Model.IsPaid)
            {
                <div class="alert alert-success mt-3">
                    <i class="bi bi-check-circle"></i> Đã thanh toán cho sinh viên.
                </div>
            }
        </div>
    </div>

    <!-- Danh sách kết quả nộp -->
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách kết quả đã nộp</h5>
        </div>
        <div class="card-body">
            @if (Model.Submissions != null && Model.Submissions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Ngày nộp</th>
                                <th>Trạng thái</th>
                                <th>Phản hồi</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var submission in Model.Submissions)
                            {
                                <tr>
                                    <td>@submission.Title</td>
                                    <td>@submission.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge @(submission.Status == "Approved" ? "bg-success" :
                                                             submission.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                            @submission.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(submission.BusinessFeedback))
                                        {
                                            <span>@(submission.BusinessFeedback.Length > 30 ? submission.BusinessFeedback.Substring(0, 30) + "..." : submission.BusinessFeedback)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có phản hồi</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@submission.SubmissionID" class="btn btn-sm btn-info">Chi tiết</a>
                                        @if (submission.Status == "Pending" || submission.Status == "Rejected")
                                        {
                                            <a asp-action="Create" asp-route-applicationId="@Model.ApplicationID" class="btn btn-sm btn-warning ms-1">Yêu cầu nộp lại</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Sinh viên chưa nộp kết quả nào cho dự án này.
                </div>
            }
        </div>
    </div>

    <!-- Nút đánh giá sinh viên -->
    @if (isProjectCompleted && canRateStudent)
    {
        <div class="card mt-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Đánh giá sinh viên sau khi hoàn thành dự án</h5>
            </div>
            <div class="card-body">
                <p>Bạn có thể gửi đánh giá cho sinh viên sau khi dự án hoàn tất.</p>
                <a asp-controller="Rating"
                   asp-action="CreateForStudent"
                   asp-route-projectId="@Model.ProjectID"
                   asp-route-revieweeId="@Model.StudentID"
                   class="btn btn-success">
                    <i class="bi bi-star-fill"></i> Đánh giá sinh viên
                </a>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Project" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại trang dự án
        </a>
    </div>
</div>
