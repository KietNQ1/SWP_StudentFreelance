@{
    ViewBag.Title = "Rút tiền từ ví";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Rút tiền từ ví</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form method="post" asp-action="RequestWithdraw" onsubmit="return confirm('Bạn chắc chắn muốn rút tiền?');">
    <div class="form-group">
        <label for="amount">Số tiền muốn rút (VNĐ):</label>
        <input type="number" class="form-control" name="amount" min="1000" required />
    </div>
    <button type="submit" class="btn btn-danger mt-3">Yêu cầu rút tiền</button>
</form>
