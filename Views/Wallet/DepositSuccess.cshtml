
<link rel="stylesheet" href="~/css/wallet/depositsuccess.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Nạp tiền thành công";
}

<div class="container mt-5">
    <div class="alert alert-success text-center shadow p-4 rounded">
        <h2 class="mb-3">@ViewBag.Message</h2>

        @if (!string.IsNullOrEmpty(ViewBag.OrderCode as string))
        {
            <p class="mb-3">Mã giao dịch: <strong>@ViewBag.OrderCode</strong></p>
        }

        <a href="@Url.Action("Index", "Wallet")" class="btn btn-success">Về trang ví</a>
    </div>
</div>
