@model StudentFreelance.ViewModels.WalletViewModel

@{
    ViewData["Title"] = "Ví của tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/wallet/wallet.css" asp-append-version="true" />
    <style>
        .transaction-row {
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .transaction-row:hover {
                background-color: rgba(211, 230, 113, 0.2);
            }
    </style>
}

<div class="container mt-4">
    <h2>Ví của tôi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Số dư ví</h4>
                </div>
                <div class="card-body">
                    <h2 class="display-4">@Model.WalletBalance.ToString("C")</h2>
                    <div class="mt-4">
                        <a asp-action="Deposit" class="btn btn-success me-2">Nạp tiền</a>
                        <a asp-action="Withdraw" class="btn btn-warning">Rút tiền</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Thao tác nhanh</h4>
                </div>
                <div class="card-body">
                    <p>Quản lý ví và xem lịch sử giao dịch của bạn.</p>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <i class="bi bi-clock-history"></i>
                            <a asp-action="TransactionHistory">Xem toàn bộ lịch sử giao dịch</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h4>Giao dịch gần đây</h4>
        </div>
        <div class="card-body">
            @if (Model.Transactions != null && Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th>Loại giao dịch</th>
                                <th>Số tiền</th>
                                <th>Mô tả</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions.Take(5))
                            {
                                <tr class="transaction-row" onclick="location.href='@Url.Action("TransactionDetail", "Wallet", new { id = transaction.TransactionID })'">
                                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@transaction.Type.TypeName</td>
                                    <td class="@(transaction.TypeID == 1 || transaction.Type.TypeName == "Hoàn tiền" ? "text-success" : "text-danger")">
                                        @(transaction.TypeID == 1 || transaction.Type.TypeName == "Hoàn tiền" ? "+" : "-")@transaction.Amount.ToString("C")
                                    </td>
                                    <td>@transaction.Description</td>
                                    <td>
                                        @if (transaction.StatusID == 2) // Thành công
                                        {
                                            <span class="badge bg-success">@transaction.Status.StatusName</span>
                                        }
                                        else if (transaction.StatusID == 3) // Thất bại
                                        {
                                            <span class="badge bg-danger">@transaction.Status.StatusName</span>
                                        }
                                        else // Đang xử lý or other status
                                        {
                                            <span class="badge bg-warning">@transaction.Status.StatusName</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="TransactionHistory" class="btn btn-outline-primary">Xem tất cả giao dịch</a>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Bạn chưa có giao dịch nào.
                </div>
            }
        </div>
    </div>
</div>
