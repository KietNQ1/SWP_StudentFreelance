@{
    ViewData["Title"] = "Hủy nạp tiền";
}

<div class="container mt-5">
    <div class="alert alert-warning text-center shadow p-4 rounded">
        <h2 class="mb-3">@ViewBag.Message</h2>

        @if (!string.IsNullOrEmpty(ViewBag.OrderCode as string))
        {
            <p class="mb-3">Mã giao dịch: <strong>@ViewBag.OrderCode</strong></p>
        }

        <a href="@Url.Action("Index", "Wallet")" class="btn btn-secondary">Về trang ví</a>
    </div>
</div>
