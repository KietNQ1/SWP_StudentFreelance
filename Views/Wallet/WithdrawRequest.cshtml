@model StudentFreelance.ViewModels.WithdrawRequestViewModel

@{
    ViewData["Title"] = "Yêu cầu rút tiền";
}

<!-- Add CSS link in head section -->
<link href="~/css/wallet/withdrawrequest.css" rel="stylesheet" />

<div class="container mt-4 withdraw-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow withdraw-card">
                <div class="card-header withdraw-card-header">
                    <h4>Gửi yêu cầu rút tiền</h4>
                </div>
                <div class="card-body withdraw-card-body">
                    <form asp-action="Withdraw" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

                        <div class="mb-3 amount-input-group">
                            <label asp-for="Amount" class="form-label withdraw-form-label">Số tiền cần rút</label>
                            <input asp-for="Amount" class="form-control withdraw-form-control amount-input" placeholder="Nhập số tiền" min="10000" step="1000" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label withdraw-form-label">Mô tả (tuỳ chọn)</label>
                            <textarea asp-for="Description" class="form-control withdraw-form-control" rows="3" placeholder="Nhập mô tả cho yêu cầu rút tiền..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label withdraw-form-label">Phương thức rút tiền</label>
                            <div class="withdraw-method-group">
                                <div class="form-check withdraw-form-check">
                                    <input class="form-check-input withdraw-form-check-input" type="radio" asp-for="UseBankAccount" value="true" checked id="useBank">
                                    <label class="form-check-label withdraw-form-check-label" for="useBank">Tài khoản ngân hàng</label>
                                </div>
                                <div class="form-check withdraw-form-check">
                                    <input class="form-check-input withdraw-form-check-input" type="radio" asp-for="UseBankAccount" value="false" id="useQR">
                                    <label class="form-check-label withdraw-form-check-label" for="useQR">Mã QR</label>
                                </div>
                            </div>
                        </div>

                        <div id="bankInfo" class="bank-info-section">
                            <h5>Thông tin ngân hàng</h5>
                            <div class="mb-3">
                                <label asp-for="AccountHolderName" class="form-label withdraw-form-label">Chủ tài khoản</label>
                                <input asp-for="AccountHolderName" class="form-control withdraw-form-control" placeholder="Tên chủ tài khoản" />
                                <span asp-validation-for="AccountHolderName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="AccountNumber" class="form-label withdraw-form-label">Số tài khoản</label>
                                <input asp-for="AccountNumber" class="form-control withdraw-form-control" placeholder="Nhập số tài khoản" />
                                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            </div>
                            <div class="mb-2">
                                <label asp-for="BankName" class="form-label withdraw-form-label">Ngân hàng</label>
                                <input asp-for="BankName" class="form-control withdraw-form-control" placeholder="Tên ngân hàng" />
                                <span asp-validation-for="BankName" class="text-danger"></span>
                            </div>
                        </div>

                        <div id="qrUpload" class="qr-upload-section" style="display:none;">
                            <h5>Tải mã QR để admin quét</h5>
                            <input type="file" name="QRCodeImage" class="form-control file-input" accept="image/*" />
                            <small class="form-text text-muted mt-2">Chọn hình ảnh mã QR (JPG, PNG, GIF)</small>
                        </div>

                        <div class="button-group">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-withdraw-secondary">← Quay lại</a>
                            <button type="submit" class="btn btn-primary btn-withdraw-primary">Gửi yêu cầu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const useBankRadio = document.getElementById("useBank");
        const useQRRadio = document.getElementById("useQR");
        const bankInfo = document.getElementById("bankInfo");
        const qrUpload = document.getElementById("qrUpload");

        function toggleWithdrawMethod() {
            if (useBankRadio.checked) {
                bankInfo.style.display = "block";
                qrUpload.style.display = "none";

                // Add smooth transition
                bankInfo.style.opacity = "0";
                setTimeout(() => {
                    bankInfo.style.opacity = "1";
                }, 10);
            } else {
                bankInfo.style.display = "none";
                qrUpload.style.display = "block";

                // Add smooth transition
                qrUpload.style.opacity = "0";
                setTimeout(() => {
                    qrUpload.style.opacity = "1";
                }, 10);
            }
        }

        useBankRadio.addEventListener("change", toggleWithdrawMethod);
        useQRRadio.addEventListener("change", toggleWithdrawMethod);
        window.addEventListener("load", toggleWithdrawMethod);

        // Add loading state to submit button
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = document.querySelector('.btn-withdraw-primary');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...';
        });
    </script>
}