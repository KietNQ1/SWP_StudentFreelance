@model StudentFreelance.ViewModels.PaymentResultViewModel

@{
    ViewData["Title"] = "Kết quả giao dịch";
}

<div class="container mt-5">
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
        <h4 class="alert-heading">
            @(Model.IsSuccess ? "Thanh toán thành công!" : "Thanh toán thất bại hoặc bị hủy.")
        </h4>
        <p>
            Mô tả giao dịch: <strong>@Model.Description</strong><br />
            Mã giao dịch: <strong>@Model.OrderCode</strong><br />
            Số tiền: <strong>@Model.Amount.ToString("N0")</strong> VND<br />
            Ngày giao dịch: <strong>@Model.TransactionDate.ToString("dd/MM/yyyy HH:mm:ss")</strong>
        </p>
        <hr />
        <a href="/Wallet/TransactionHistory" class="btn btn-primary">Xem lịch sử giao dịch</a>
        <a href="/Wallet" class="btn btn-secondary ms-2">Về trang ví</a>
    </div>
</div>
