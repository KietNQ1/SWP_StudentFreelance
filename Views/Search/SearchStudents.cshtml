@model IEnumerable<StudentFreelance.Models.ApplicationUser>
@{
    ViewData["Title"] = "Tìm kiếm sinh viên";
}

<div class="container mt-4">
    <h2 class="mb-4">Tìm kiếm sinh viên</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="SearchStudents" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm theo tên/trường/chuyên ngành</label>
                    <div class="input-group">
                        <input type="text" name="query" value="@ViewBag.Query" class="form-control" placeholder="Nhập tên, trường học hoặc chuyên ngành...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Kỹ năng</label>
                    <select name="skillIds" class="form-select" multiple>
                        @foreach (var skill in ViewBag.Skills)
                        {
                            var selected = ViewBag.SkillIds != null && ViewBag.SkillIds.Contains(skill.SkillID);
                            <option value="@skill.SkillID" selected="@selected">
                                @skill.Category.CategoryName - @skill.SkillName
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Tỉnh/Thành phố</label>
                    <select name="provinceId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var province in ViewBag.Provinces)
                        {
                            var selected = ViewBag.ProvinceId != null && ViewBag.ProvinceId == province.ProvinceID;
                            <option value="@province.ProvinceID" selected="@selected">
                                @province.Name
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            foreach (var student in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 search-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0">
                                    @if (!string.IsNullOrEmpty(student.ProfilePicturePath))
                                    {
                                        <img src="@student.ProfilePicturePath" class="rounded-circle profile-avatar" alt="@student.FullName">
                                    }
                                    else
                                    {
                                        <div class="profile-avatar-placeholder">
                                            <span>@student.FullName.Substring(0, 1)</span>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="mb-0">@student.FullName</h5>
                                    <p class="text-muted mb-0">@student.University</p>
                                    <p class="text-muted mb-0">@student.Major</p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <h6>Kỹ năng:</h6>
                                <div class="d-flex flex-wrap gap-1">
                                    @if (ViewBag.StudentSkills != null && ViewBag.StudentSkills.ContainsKey(student.Id))
                                    {
                                        foreach (var skill in ViewBag.StudentSkills[student.Id])
                                        {
                                            <span class="skill-tag">
                                                @skill.Skill.SkillName <span class="skill-level">(@skill.ProficiencyLevel.LevelName)</span>
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có thông tin kỹ năng</span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <h6>Địa chỉ:</h6>
                                <p class="mb-0">
                                    @if (student.Address != null && student.Address.Province != null)
                                    {
                                        @student.Address.Province.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có thông tin địa chỉ</span>
                                    }
                                </p>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="me-2">
                                        <i class="bi bi-star-fill rating-stars"></i> @student.AverageRating
                                    </span>
                                    <span>
                                        <i class="bi bi-briefcase-fill"></i> @student.TotalProjects dự án
                                    </span>
                                </div>
                                <a href="#" class="btn btn-outline-primary btn-sm">Xem hồ sơ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Không tìm thấy sinh viên nào phù hợp với tiêu chí tìm kiếm.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="skillIds"]').select2({
                placeholder: "Chọn kỹ năng...",
                allowClear: true
            });

            $('select[name="provinceId"]').select2({
                placeholder: "Chọn tỉnh/thành phố...",
                allowClear: true
            });
        });
    </script>
} 