@model IEnumerable<StudentFreelance.Models.ApplicationUser>
@{
    ViewData["Title"] = "Tìm kiếm sinh viên";
}

<div class="container mt-4">
    <h2 class="mb-4">Tìm kiếm sinh viên</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="SearchStudents" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm theo tên/trường/chuyên ngành</label>
                    <div class="input-group">
                        <input type="text" name="query" value="@ViewBag.Query" class="form-control" placeholder="Nhập tên, trường học hoặc chuyên ngành...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Kỹ năng</label>
                    <select name="skillIds" class="form-select" multiple>
                        @foreach (var skill in ViewBag.Skills)
                        {
                            var selected = ViewBag.SkillIds != null && ViewBag.SkillIds.Contains(skill.SkillID);
                            <option value="@skill.SkillID" selected="@selected">
                                @skill.Category.CategoryName - @skill.SkillName
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Tỉnh/Thành phố</label>
                    <select name="provinceId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var province in ViewBag.Provinces)
                        {
                            var selected = ViewBag.ProvinceId != null && ViewBag.ProvinceId == province.ProvinceID;
                            <option value="@province.ProvinceID" selected="@selected">
                                @province.Name
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="student-list">
            @foreach (var student in Model)
            {
                <div class="card mb-3 search-card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-1 text-center">
                                @if (!string.IsNullOrEmpty(student.ProfilePicturePath))
                                {
                                    <img src="@student.ProfilePicturePath" class="rounded-circle profile-avatar" alt="@student.FullName" style="width: 60px; height: 60px;">
                                }
                                else
                                {
                                    <div class="profile-avatar-placeholder" style="width: 60px; height: 60px;">
                                        <span>@student.FullName.Substring(0, 1)</span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-3">
                                <h5 class="mb-0">@student.FullName</h5>
                                <p class="text-muted mb-1">@student.University</p>
                                <p class="text-muted mb-0">@student.Major</p>
                            </div>
                            <div class="col-md-5">
                                <h6 class="mb-2">Kỹ năng:</h6>
                                <div class="d-flex flex-wrap gap-1">
                                    @if (ViewBag.StudentSkills != null && ViewBag.StudentSkills.ContainsKey(student.Id))
                                    {
                                        foreach (var skill in ViewBag.StudentSkills[student.Id])
                                        {
                                            <span class="skill-tag">
                                                @skill.Skill.SkillName <span class="skill-level">(@skill.ProficiencyLevel.LevelName)</span>
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có thông tin kỹ năng</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-2">
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt"></i>
                                    @if (student.Address != null && student.Address.Province != null)
                                    {
                                        @student.Address.Province.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có địa chỉ</span>
                                    }
                                </p>
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-star-fill rating-stars me-1"></i>
                                    <span>@student.AverageRating</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-briefcase-fill me-1"></i>
                                    <span>@student.TotalProjects dự án</span>
                                </div>
                            </div>
                            <div class="col-md-1 text-end">
                                <a href="#" class="btn btn-outline-primary">Xem hồ sơ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Không tìm thấy sinh viên nào phù hợp với tiêu chí tìm kiếm.
        </div>
    }
</div>

<style>
    .student-list .card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-left: 4px solid #198754;
    }
    
    .student-list .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .profile-avatar-placeholder {
        width: 60px;
        height: 60px;
        background-color: #198754;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: bold;
        border-radius: 50%;
    }
    
    .rating-stars {
        color: #ffc107;
    }
    
    .skill-tag {
        background-color: #e9ecef;
        border-radius: 4px;
        padding: 2px 8px;
        font-size: 0.85rem;
        margin-right: 4px;
        margin-bottom: 4px;
        display: inline-block;
    }
    
    .skill-level {
        font-size: 0.75rem;
        color: #6c757d;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="skillIds"]').select2({
                placeholder: "Chọn kỹ năng...",
                allowClear: true
            });

            $('select[name="provinceId"]').select2({
                placeholder: "Chọn tỉnh/thành phố...",
                allowClear: true
            });
        });
    </script>
} 