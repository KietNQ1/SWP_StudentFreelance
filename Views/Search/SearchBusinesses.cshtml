@model IEnumerable<StudentFreelance.Models.ApplicationUser>
@{
    ViewData["Title"] = "Tìm kiếm doanh nghiệp";
}

@section Styles {
    <link rel="stylesheet" href="~/css/search/searchBusinesses.css" asp-append-version="true" />
    <style>
        .filter-header {
            background-color: #89AC46 !important;
            color: white;
        }
    </style>
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Tìm kiếm doanh nghiệp</h2>

    <div class="card mb-4 search-card">
        <div class="card-header filter-header">
            <h5 class="mb-0 text-white">Bộ lọc tìm kiếm</h5>
        </div>
        <div class="card-body">
            <form asp-action="SearchBusinesses" method="get" class="row g-3">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" name="query" placeholder="Tìm kiếm doanh nghiệp..." value="@ViewBag.Query">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select name="provinceCode" class="form-select">
                            <option value="">-- Chọn tỉnh/thành phố --</option>
                            @foreach (var province in ViewBag.Provinces)
                            {
                                var selected = ViewBag.ProvinceCode != null && ViewBag.ProvinceCode == province.ID;
                                <option value="@province.ID" selected="@selected">
                                    @province.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-search me-2"></i>Tìm kiếm
                        </button>
                        <a href="@Url.Action("SearchBusinesses", "Search")" class="btn btn-outline-secondary ms-2">
                            <i class="bi bi-x-circle me-2"></i>Xóa bộ lọc
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="business-list">
            @foreach (var business in Model)
            {
                <div class="card mb-3 search-card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-1 text-center">
                                @if (!string.IsNullOrEmpty(business.ProfilePicturePath))
                                {
                                    <img src="@business.ProfilePicturePath" class="rounded-circle profile-avatar" alt="@business.CompanyName" style="width: 60px; height: 60px;">
                                }
                                else
                                {
                                    <div class="profile-avatar-placeholder" style="width: 60px; height: 60px;">
                                        <span>@(business.CompanyName?.Substring(0, 1) ?? "C")</span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-4">
                                <h5 class="mb-0 business-name">@business.CompanyName</h5>
                                <p class="text-muted mb-2">@business.Industry</p>
                                <p class="mb-0">
                                    <i class="bi bi-person"></i> @business.FullName
                                </p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-1">
                                    @if (business.Address != null && (!string.IsNullOrEmpty(business.Address.ProvinceName) || !string.IsNullOrEmpty(business.Address.DetailAddress)))
                                    {
                                        <i class="bi bi-geo-alt"></i>
                                        <span>
                                            @if (!string.IsNullOrEmpty(business.Address.DetailAddress))
                                            {
                                                @(business.Address.DetailAddress)<text>, </text>
                                            }
                                            @if (!string.IsNullOrEmpty(business.Address.WardName))
                                            {
                                                @(business.Address.WardName)<text>, </text>
                                            }
                                            @if (!string.IsNullOrEmpty(business.Address.DistrictName))
                                            {
                                                @(business.Address.DistrictName)<text>, </text>
                                            }
                                            @if (!string.IsNullOrEmpty(business.Address.ProvinceName))
                                            {
                                                @(business.Address.ProvinceName)
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="bi bi-geo-alt"></i> Chưa có thông tin địa chỉ</span>
                                    }
                                </p>
                                @if (!string.IsNullOrEmpty(business.PhoneNumber))
                                {
                                    <p class="mb-1">
                                        <i class="bi bi-telephone"></i> @business.PhoneNumber
                                    </p>
                                }
                                <p class="mb-0">
                                    <i class="bi bi-envelope"></i> @business.Email
                                </p>
                            </div>
                            <div class="col-md-2">
                                <div class="info-badge mb-2">
                                    <i class="bi bi-star-fill rating-stars me-1"></i>
                                    <span>@business.AverageRating</span>
                                </div>
                                <div class="info-badge">
                                    <i class="bi bi-briefcase-fill me-1"></i>
                                    <span>@(ViewBag.ProjectCounts != null && ViewBag.ProjectCounts.ContainsKey(business.Id) 
                                        ? ViewBag.ProjectCounts[business.Id] 
                                        : 0) dự án</span>
                                </div>
                            </div>
                            <div class="col-md-2 text-center profile-button-container">
                                <a href="@Url.Action("Profile", "User", new { id = business.Id })" class="btn btn-view-profile">Xem hồ sơ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Không tìm thấy doanh nghiệp nào phù hợp với tiêu chí tìm kiếm.
        </div>
    }
</div>



@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="provinceCode"]').select2({
                placeholder: "Chọn tỉnh/thành phố...",
                allowClear: true
            });
        });
    </script>
} 