@model StudentFreelance.ViewModels.UpdateApplicationStatusViewModel

@{
    ViewData["Title"] = "Cập nhật trạng thái ứng tuyển";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Cập nhật trạng thái ứng tuyển</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" asp-for="ApplicationID" />
                        <input type="hidden" name="projectId" value="@ViewBag.ProjectID" />
                        
                        <div class="mb-4">
                            <label asp-for="Status" class="form-label">Trạng thái</label>
                            <select asp-for="Status" class="form-select" asp-items="Model.StatusOptions"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ProjectApplications" asp-route-projectId="@ViewBag.ProjectID" 
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Cập nhật trạng thái
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 