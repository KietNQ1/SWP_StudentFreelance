@model StudentFreelance.ViewModels.UpdateApplicationStatusViewModel

@{
    ViewData["Title"] = "Cập nhật trạng thái ứng tuyển";
    string statusClass = Model.Status switch {
        "Pending" => "status-pending",
        "Accepted" => "status-accepted",
        "Rejected" => "status-rejected",
        _ => "status-pending"
    };
}

<link rel="stylesheet" href="~/css/application/update-status.css" />

<div class="update-status-container">
    <h2 class="update-status-title">Cập nhật trạng thái ứng tuyển</h2>
    <hr />
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Cập nhật trạng thái ứng tuyển</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateStatus" method="post" id="updateStatusForm">
                <input type="hidden" asp-for="ApplicationID" />
                <input type="hidden" name="projectId" value="@ViewBag.ProjectID" />
                <div class="mb-4">
                    <label asp-for="Status" class="form-label">Trạng thái</label>
                    <select asp-for="Status" class="form-select @statusClass" asp-items="Model.StatusOptions" id="statusSelect"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="BusinessNotes" class="form-label">Ghi chú</label>
                    <textarea asp-for="BusinessNotes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="BusinessNotes" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="ProjectApplications" asp-route-projectId="@ViewBag.ProjectID" 
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary" id="submitButton">
                        <i class="bi bi-check-circle"></i> Cập nhật trạng thái
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateStatusSelectColor() {
            var select = document.getElementById('statusSelect');
            select.classList.remove('status-pending', 'status-accepted', 'status-rejected');
            switch(select.value) {
                case 'Pending':
                    select.classList.add('status-pending');
                    break;
                case 'Accepted':
                    select.classList.add('status-accepted');
                    break;
                case 'Rejected':
                    select.classList.add('status-rejected');
                    break;
                default:
                    select.classList.add('status-pending');
            }
        }
        document.getElementById('statusSelect').addEventListener('change', updateStatusSelectColor);
        // Gọi khi load trang để set màu đúng trạng thái ban đầu
        updateStatusSelectColor();
    </script>
} 
