@model StudentFreelance.ViewModels.ConfirmAcceptStudentViewModel

@{
    ViewData["Title"] = "Xác nhận chấp nhận ứng viên";
}

<link rel="stylesheet" href="~/css/ConfirmAcceptStudent.css" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="confirm-card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Xác nhận chấp nhận ứng viên</h5>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="alert alert-warning">
                        <h5><i class="bi bi-exclamation-triangle"></i> Cảnh báo ngân sách</h5>
                        <p>Ngân sách dự án hiện tại không đủ để chấp nhận ứng viên này.</p>
                    </div>

                    <div class="info-section">
                        <h6 class="section-title">Thông tin dự án</h6>
                        <p class="info-item">Tên dự án: <strong>@Model.ProjectTitle</strong></p>
                    </div>

                    <div class="info-section">
                        <h6 class="section-title">Thông tin ứng viên</h6>
                        <p class="info-item">Tên ứng viên: <strong>@Model.StudentName</strong></p>
                        <p class="info-item">Mức lương đề xuất: <strong>@Model.StudentSalary.ToString("N0") VNĐ</strong></p>
                    </div>

                    <div class="info-section">
                        <h6 class="section-title">Thông tin tài chính</h6>
                        <p class="info-item">Số tiền thiếu: <strong class="text-danger">@Model.MissingAmount.ToString("N0") VNĐ</strong></p>
                        <p class="info-item">Số dư ví của bạn: <strong class="@(Model.WalletBalance >= Model.MissingAmount ? "text-success" : "text-danger")">@Model.WalletBalance.ToString("N0") VNĐ</strong></p>
                        
                        @if (Model.WalletBalance < Model.MissingAmount)
                        {
                            <div class="alert alert-danger mt-2">
                                <i class="bi bi-exclamation-circle"></i> Số dư ví không đủ để bổ sung ngân sách. Vui lòng <a asp-controller="Wallet" asp-action="Deposit" class="alert-link">nạp thêm tiền</a> vào ví.
                            </div>
                        }
                    </div>

                    <form asp-action="ConfirmAcceptStudent" asp-controller="Application" method="post">
                        <input type="hidden" asp-for="ApplicationID" />
                        <input type="hidden" asp-for="ProjectID" />
                        <input type="hidden" asp-for="StudentName" />
                        <input type="hidden" asp-for="ProjectTitle" />
                        <input type="hidden" asp-for="StudentSalary" />
                        <input type="hidden" asp-for="MissingAmount" />
                        <input type="hidden" asp-for="BusinessNotes" />
                        <input type="hidden" asp-for="WalletBalance" />

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" asp-for="ConfirmAccept" id="confirmAccept" />
                            <label class="form-check-label" for="confirmAccept">
                                Tôi xác nhận muốn chấp nhận ứng viên này
                            </label>
                        </div>

                        <div class="form-check mb-4">
                            <input type="checkbox" class="form-check-input" asp-for="ConfirmAddFunds" id="confirmAddFunds" disabled="@(Model.WalletBalance < Model.MissingAmount)" />
                            <label class="form-check-label" for="confirmAddFunds">
                                Tôi đồng ý bổ sung @Model.MissingAmount.ToString("N0") VNĐ từ ví của tôi vào ngân sách dự án
                            </label>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ViewApplication" asp-route-id="@Model.ApplicationID" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            @if (Model.WalletBalance >= Model.MissingAmount)
                            {
                                <button type="submit" id="submitButton" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Xác nhận
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary" disabled>
                                    <i class="bi bi-check-circle"></i> Xác nhận
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize form state on page load
        function updateFormState() {
            var confirmAcceptCheckbox = document.getElementById('confirmAccept');
            var confirmAddFundsCheckbox = document.getElementById('confirmAddFunds');
            var submitButton = document.getElementById('submitButton');
            var walletBalance = @Model.WalletBalance;
            var missingAmount = @Model.MissingAmount;
            var insufficientFunds = walletBalance < missingAmount;
            
            if (!confirmAcceptCheckbox.checked) {
                // If not accepting student, no need to add funds
                confirmAddFundsCheckbox.checked = false;
                confirmAddFundsCheckbox.disabled = true;
                
                // Nút xác nhận vẫn hoạt động nếu không chọn chấp nhận
                if (submitButton) {
                    submitButton.disabled = false;
                }
            } else {
                // If accepting student, check wallet balance
                confirmAddFundsCheckbox.disabled = insufficientFunds;
                
                // Nếu tiền trong ví không đủ, không cho phép bổ sung ngân sách và nút xác nhận đã bị ẩn
                // Nếu tiền đủ và đã chọn bổ sung ngân sách, cho phép xác nhận
                if (submitButton && !insufficientFunds) {
                    submitButton.disabled = !confirmAddFundsCheckbox.checked;
                }
            }
        }
        
        // Run on page load
        updateFormState();
        
        // Khi người dùng thay đổi checkbox xác nhận chấp nhận
        document.getElementById('confirmAccept').addEventListener('change', updateFormState);
        
        // Khi người dùng thay đổi checkbox xác nhận bổ sung ngân sách
        document.getElementById('confirmAddFunds').addEventListener('change', updateFormState);
    </script>
} 